\begin_layout Itemize
Probe system with large steady input superimposed by sinusoidal in time
 
\end_layout

\begin_deeper
\begin_layout Itemize
Input signal
\begin_inset Formula 
\begin{equation}
s=s_{0}+s_{1}(t)
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Probability density 
\begin_inset Formula 
\begin{equation}
\rho=\rho_{0}+\rho_{1}(t)
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Probability current 
\begin_inset Formula 
\begin{equation}
J=J_{0}+J_{1}(t)
