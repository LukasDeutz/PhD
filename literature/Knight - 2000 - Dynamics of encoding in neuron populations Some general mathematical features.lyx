\end_inset


\end_layout

\end_inset

 with
\begin_inset Formula 
\begin{equation}
(\sigma I-Q_{0})^{-1}\phi_{n}=\frac{1}{\sigma-\lambda_{n}}\phi_{n}
\end{equation}

\end_inset


\end_layout

