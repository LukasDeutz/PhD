\]

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Itemize
Fokker-Planck equation 
\begin_inset Formula 
\[
\frac{\partial P}{\partial t}=-\frac{\partial J_{V}}{\partial_{V}}
\]

\end_inset

where 
\begin_inset Formula 
\[
J_{V}(V,t)=\left[-\frac{V-V_{L}}{\tau_{m}}+\frac{\psi(V)+I(t)}{C}\right]P(V,t)-\frac{\sigma^{2}}{2\tau_{m}}\frac{\partial P}{\partial V}
\]

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
Exponential integrate-and-fire neuron.
 Start from 
\begin_inset Formula 
\[
C\frac{dV}{dt}=-g_{L}(V-V_{L})+\psi(V)+I_{\text{syn}}(t)
\]

\end_inset

with 
\begin_inset Formula 
\[
\psi(V)=g_{L}\Delta_{T}\exp\left(\frac{V-V_{T}}{\Delta_{T}}\right)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Divide by 
\begin_inset Formula $C$
\end_inset


\begin_inset Formula 
\[
\frac{dV}{dt}=-\frac{1}{\tau_{m}}(V-V_{L})+\frac{1}{\tau_{m}}\Delta_{T}\exp\left(\frac{V-V_{T}}{\Delta_{T}}\right)+\frac{1}{C}I_{\text{syn}}(t)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Variable transformation 
\begin_inset Formula $v=\frac{V-V_{L}}{V_{\text{th}}-V_{L}}$
\end_inset


\begin_inset Formula 
\[
(V_{\text{th}}-V_{L})\frac{dv}{dt}=-\frac{1}{\tau_{m}}(V-V_{L})+\frac{1}{\tau_{m}}\Delta_{T}\exp\left(\frac{V-V_{T}}{\Delta_{T}}\right)+\frac{1}{C}I_{\text{syn}}(t)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Using 
\begin_inset Formula $V=(V_{\text{th}}-V_{L})v+V_{L}$
\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\frac{dv}{dt} & =-\frac{v}{\tau_{m}}+\frac{\Delta_{T}}{\tau_{m}(V_{\text{th}}-V_{L})}\exp\left(\frac{(V_{\text{th}}-V_{L})(v-1)}{\Delta_{T}}\right)+\frac{1}{C}I_{\text{syn}}(t)
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Define 
\begin_inset Formula $\tilde{\Delta}_{T}=\frac{\Delta_{T}}{V_{th}-V_{L}}$
\end_inset

 such that 
\begin_inset Formula 
\[
\frac{dv}{dt}=-\frac{v}{\tau_{m}}+\frac{1}{\tau_{m}}\tilde{\Delta}_{T}\exp\left(\frac{v-1}{\tilde{\Delta}_{T}}\right)+\frac{1}{C}I_{\text{syn}}(t)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Replace synaptic input current by Gaussian white input noise with average
 
\begin_inset Formula $\mu$
\end_inset

