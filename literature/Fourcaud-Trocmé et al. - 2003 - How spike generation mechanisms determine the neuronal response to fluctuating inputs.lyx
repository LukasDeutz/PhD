\begin_layout Itemize
Synaptic current 
\begin_inset Formula 
\[
I_{\text{syn}}(t)=I_{0}+\delta I(t)+I_{\text{noise}}
\]

\end_inset


\end_layout

\begin_layout Itemize
Firing rate 
\begin_inset Formula $\nu(t)$
\end_inset

 is determined as a function of 
\begin_inset Formula $I_{0}+\delta I(t)$
\end_inset

 averaging over many realization of 
\begin_inset Formula $I_{\text{noise}}$
\end_inset


\end_layout

\begin_layout Itemize
In the limit of small 
\begin_inset Formula $\delta I(t)$
\end_inset

, a linear relationship can be written between 
\begin_inset Formula $\nu(t)$
\end_inset

 and 
\begin_inset Formula $\delta I(t)$
\end_inset


\begin_inset Formula 
\[
\nu(t)=\Phi(I_{0})+\int_{0}^{\infty}dt'\kappa(t')\delta I(t-t')
\]

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
Hence,
\begin_inset Formula 
\[
\delta\nu(t)=\int_{0}^{\infty}dt'\kappa(t')\delta I(t-t')
\]

\end_inset


\end_layout

\begin_layout Plain Layout
We can set the lower integral border to 
\begin_inset Formula $-\infty$
\end_inset

 and change the arguments 
\begin_inset Formula 
\[
\delta\nu(t)=\int_{-\infty}^{\infty}dt'\kappa(t-t')\delta I(t')
\]

\end_inset


\end_layout

\begin_layout Plain Layout
The kernel 
\begin_inset Formula $\kappa(t-t')=\kappa(-(t'-t))$
\end_inset

 is shifted by 
\begin_inset Formula $t$
\end_inset

 to the right and it as flipped at the 
\begin_inset Formula $y$
\end_inset

-axis.
 To ensure causality 
\begin_inset Formula $\kappa(t-t')=0$
\end_inset

 for 
\begin_inset Formula $t'>t$
\end_inset

.
 Take the Fourier transform on both sides and use the convolution theorem
\begin_inset Formula 
\[
\delta\hat{\nu}(\omega)=\hat{\kappa}(\omega)\delta\hat{I}(\omega)
\]

\end_inset

 
\end_layout

\end_inset


\end_layout

\begin_layout Itemize
Here 
\begin_inset Formula $\Phi(I_{0})$
\end_inset

 is the average firing rate of the neuron in response to a current 
\begin_inset Formula $I_{0}$
\end_inset

 in presence of noise 
\end_layout

\begin_layout Itemize
For sinusoidally modulation 
\begin_inset Formula 
\[
I_{\text{syn}}(t)=I_{0}+I_{1}\cos(2\pi ft)+I_{\text{noise}}
\]

\end_inset

with 
\begin_inset Formula $I_{1}\ll I_{0}$
\end_inset

 the response is 
\begin_inset Formula 
\[
\nu(t)=\nu_{0}+\nu_{1}(f)\cos\left(2\pi ft+\phi(f)\right)
\]

\end_inset

with 
\begin_inset Formula $v_{1}(f)$
\end_inset

 and 
\begin_inset Formula $\phi(f)$
\end_inset

 are related to the modulus and the argument of the Fourier transform of
 
\begin_inset Formula $\kappa$
\end_inset

,
\begin_inset Formula $\hat{\kappa}(f)$
\end_inset

 by 
\begin_inset Formula 
\begin{align*}
v_{1}(f) & =I_{1}\left|\hat{\kappa}(f)\right|\\
\phi(f) & =\text{arg}\hat{\kappa}(f)
\end{align*}

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
Proof 
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
We showed before 
\begin_inset Formula 
\[
\delta\hat{v}(\omega)=\hat{\kappa}(\omega)\delta\hat{I}(\omega)
\]

\end_inset

with 
\begin_inset Formula $\delta\hat{\nu}(\omega)=\nu_{1}(f)$
\end_inset

.
 If 
\begin_inset Formula $\delta I(t)=I_{1}\cos(\omega_{0}t)$
\end_inset

, then 
\begin_inset Formula 
\[
\delta\hat{I}(\omega)=I_{1}\pi\left(\delta(\omega-\omega_{0})+\delta(\omega+\omega_{0})\right)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Back transform 
\begin_inset Formula 
\begin{align*}
\delta I(t) & =I_{1}\frac{1}{2}\int d\omega\,\left(\delta(\omega-\omega_{0})+\delta(\omega+\omega_{0})\right)e^{i\omega\tau}\\
 & =I_{1}\frac{1}{2}\left(e^{-i\omega_{0}t}+e^{i\omega_{0}\tau}\right)\\
 & =I_{1}\cos(\omega t)
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
We can write 
\begin_inset Formula 
\begin{align*}
\hat{\kappa}(\omega) & =\left|\hat{\kappa}(\omega)\right|e^{i\text{arg}\left[\hat{\kappa}(\omega)\right]}
\end{align*}

\end_inset

and hence 
\begin_inset Formula 
\begin{align*}
\hat{\kappa}(\omega)\delta\hat{I}(\omega) & =\left|\hat{\kappa}(\omega)\right|e^{i\text{arg}\left[\hat{\kappa}(\omega)\right]}I_{1}\pi\left(\delta(\omega-\omega_{0})+\delta(\omega+\omega_{0})\right)\\
 & =I_{1}\left|\hat{\kappa}(\omega)\right|\pi\left(\delta(\omega-\omega_{0})+\delta(\omega+\omega_{0})\right)e^{i\text{arg}\left[\hat{\kappa}(\omega)\right]}
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Back transform 
\begin_inset Formula 
\begin{align*}
 & I_{1}\left|\hat{\kappa}(\omega)\right|\frac{1}{2}\int_{-\infty}^{\infty}d\omega\left(\delta(\omega-\omega_{0})+\delta(\omega+\omega_{0})\right)e^{i\text{arg}\left[\hat{\kappa}(\omega)\right]}e^{i\omega t}\\
= & I_{1}\left|\hat{\kappa}(\omega)\right|\frac{1}{2}\left(e^{i(\omega_{0}t+\text{arg}\left[\hat{\kappa}(\omega_{0})\right])}+e^{i(-\omega_{0}t+\text{arg}\left[\hat{\kappa}(-\omega_{0})\right])}\right)\\
= & I_{1}\left|\hat{\kappa}(\omega)\right|\frac{1}{2}\left(e^{i(\omega_{0}t+\text{arg}\left[\hat{\kappa}(\omega_{0})\right])}+e^{-i(\omega_{0}t+\text{arg}\left[\hat{\kappa}(\omega_{0})\right])}\right)\\
= & I_{1}\left|\hat{\kappa}(\omega)\right|\cos(\omega_{0}t+\text{arg}\left[\hat{\kappa}(\omega_{0})\right])
\end{align*}

\end_inset


\end_layout

\end_inset

 
