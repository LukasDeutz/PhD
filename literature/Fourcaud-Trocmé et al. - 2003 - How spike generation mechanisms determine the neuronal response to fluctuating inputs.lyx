\]

\end_inset


\end_layout

\begin_layout Plain Layout
so that 
\begin_inset Formula 
\[
L=\partial_{v}\left[(v-\mu)-\tilde{\Delta}_{T}\exp\left(\frac{v-1}{\tilde{\Delta}_{T}}\right)\right]+\frac{\sigma^{2}}{2}\partial_{v}^{2}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
For the leaky integrate-and-fire we make the variable transformation 
\begin_inset Formula 
\[
x=\sqrt{2}\frac{v-\mu}{\sigma}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
so that 
\begin_inset Formula 
\begin{align*}
\rho_{v} & =\frac{\sqrt{2}}{\sigma}\rho_{x}\\
\rho_{vv} & =\frac{2}{\sigma^{2}}\rho_{xx}
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Hence, we find 
\begin_inset Formula 
\[
L\rho=\left(1-e^{(v-1)/\tilde{\Delta}_{T}}\right)\rho+\left((v-\mu)-\tilde{\Delta}_{T}e^{e^{(v-1)/\tilde{\Delta}_{T}}}\right)\rho_{v}+\frac{\sigma^{2}}{2}\rho_{vv}
\]

\end_inset

which becomes 
\begin_inset Formula 
\begin{align*}
\left(1-e^{(v-1)/\tilde{\Delta}_{T}}\right)\rho+\left(x-\frac{\sqrt{2}\tilde{\Delta}_{T}}{\sigma}e^{e^{(v-1)/\tilde{\Delta}_{T}}}\right)\rho_{x}+\rho_{xx}\\
1\rho-x\partial_{x}\rho+\partial_{xx}\rho & =V(x)+\partial_{x}^{2}
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
We have 
\begin_inset Formula 
\[
v=\frac{\sigma}{\sqrt{2}}x+\mu
\]

\end_inset

and 
\begin_inset Formula 
\[
x_{\text{th}}=\sqrt{2}\frac{1-\mu}{\sigma}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
We find 
\begin_inset Formula 
\begin{align*}
e^{(v-1)/\tilde{\Delta}_{T}} & =\exp\left(\frac{\frac{\sigma}{\sqrt{2}}x+\mu-1}{\tilde{\Delta}_{T}}\right)\\
 & =\exp\left(\frac{x+\frac{\sqrt{2}(\mu-1)}{\sigma}}{\frac{\sqrt{2}}{\sigma}\tilde{\Delta}_{T}}\right)\\
 & =\exp\left(\frac{x-x_{\text{th}}}{\frac{\sqrt{2}}{\sigma}\tilde{\Delta}_{T}}\right)\\
 & =\exp\left(\frac{x-x_{\text{th}}}{\overline{\Delta}_{T}}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
with 
\begin_inset Formula $\overline{\Delta}_{T}=\frac{\sqrt{2}}{\sigma}\tilde{\Delta}_{T}$
\end_inset

.
 Hence, we find 
\begin_inset Formula 
\[
\left(1-e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)\rho+\left(x-\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)\rho_{x}+\rho_{xx}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Hence, the Fokker-Planck operator in the new coordinates reads 
\begin_inset Formula 
\[
\left(1-e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)+\left(x-\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)\partial_{x}+\partial_{x}^{2}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
We want to make a similarity transformation 
\begin_inset Formula $\varphi=f^{-1}\phi$
\end_inset

 such that 
\begin_inset Formula 
\[
f^{-1}Lf=V(x)+\partial_{x}^{2}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
We have 
\begin_inset Formula 
\[
f^{-1}\left[a(x)+b(x)\partial_{x}+\partial_{x}^{2}\right]f\phi=\left(V(x)+\partial_{x}^{2}\right)\phi
\]

\end_inset


\end_layout

\begin_layout Plain Layout
We evaluate the l.h.s.
 
\begin_inset Formula 
\begin{align*}
 & a(x)\phi+f^{-1}b(x)\left(f'\phi+f\phi'\right)+f^{-1}\left(f''\phi+2f'\phi'+f\phi''\right)\\
= & a(x)\phi+f^{-1}b(x)f'\phi+b(x)\phi'+f^{-1}f''\phi+2f^{-1}f'\phi'+\phi''\\
= & \left(a(x)+f^{-1}b(x)f'+f^{-1}f''\right)\phi+\left(b(x)+2f^{-1}f'\right)\phi'+\phi''
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Hence, we need to choose 
\begin_inset Formula $f$
\end_inset

 such that 
\begin_inset Formula 
\[
\left(b(x)+2f^{-1}f'\right)=0
\]

\end_inset

so that 
\begin_inset Formula 
\[
\left(x-\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)+2\frac{1}{f}\frac{df}{dx}=0
\]

\end_inset


\end_layout

\begin_layout Plain Layout
which is an ordinary differential equation
\begin_inset Formula 
\[
\frac{1}{f}df=-\frac{1}{2}\left(x-\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)dx
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Quick check For the LIF 
\begin_inset Formula $\psi(v)=0$
\end_inset

 and hence 
\begin_inset Formula 
\[
\frac{1}{f}df=-\frac{1}{2}xdx
\]

\end_inset

which yields 
\begin_inset Formula 
\[
f=\exp(-\frac{1}{4}x^{2})
\]

\end_inset

with integration constant set to 
\begin_inset Formula $1$
\end_inset

.
 For the exponential integrate-and-fire, we have 
\begin_inset Formula 
\begin{align*}
\ln(f) & =-\frac{1}{4}x^{2}+\frac{1}{2}\overline{\Delta}_{T}^{2}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\\
f & =\exp\left(-\frac{1}{4}x^{2}+\frac{1}{2}\overline{\Delta}_{T}^{2}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Potential 
\begin_inset Formula 
\[
\left(a(x)+f^{-1}b(x)f'+f^{-1}f''\right)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Quick check for the LIF 
\begin_inset Formula 
\begin{align*}
a(x) & =1\\
b(x) & =x
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
f & =e^{-\frac{1}{4}x^{2}}\\
f' & =-\frac{1}{2}xf\\
f'' & =-\frac{1}{2}f+\frac{1}{4}x^{2}f
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
So we arrive at 
\begin_inset Formula 
\begin{align*}
 & \left(a(x)-\frac{1}{2}x^{2}+f^{-1}\left(-\frac{1}{2}f+\frac{1}{4}x^{2}f\right)\right)\\
= & \left(1-\frac{1}{2}x^{2}-\frac{1}{2}+\frac{1}{4}x^{2}\right)\\
= & \left(\frac{1}{2}-\frac{1}{4}x^{2}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
For the exponential integrate-and-fire we get 
\begin_inset Formula 
\begin{align*}
a(x) & =\left(1-e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)\\
b(x) & =\left(x-\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
and 
\begin_inset Formula 
\begin{align*}
f & =\exp\left(-\frac{1}{4}x^{2}+\frac{1}{2}\overline{\Delta}_{T}^{2}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)\\
f' & =\left(-\frac{1}{2}x+\frac{1}{2}\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)f\\
f'' & =\left(-\frac{1}{2}+\frac{1}{2}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)f+\left(-\frac{1}{2}x+\frac{1}{2}\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)^{2}f
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
We arrive at 
\begin_inset Formula 
\begin{align*}
 & a(x)+f^{-1}b(x)f'+f^{-1}f''\\
= & 1-e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}+\left(x-\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)\left(-\frac{1}{2}x+\frac{1}{2}\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)-\frac{1}{2}+\frac{1}{2}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}+\left(-\frac{1}{2}x+\frac{1}{2}\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)^{2}\\
= & \frac{1}{2}-\frac{1}{2}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}-\frac{1}{2}x^{2}+\frac{1}{2}x\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}+\frac{1}{2}x\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}-\frac{1}{2}\overline{\Delta}_{T}^{2}e^{2(x-x_{\text{th}})/\overline{\Delta}_{T}}+\frac{1}{4}x^{2}-\frac{1}{2}x\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}+\frac{1}{4}\overline{\Delta}_{T}e^{2(x-x_{\text{th}})/\overline{\Delta}_{T}}\\
= & 1-\frac{1}{2}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}-\frac{1}{4}x^{2}+\frac{1}{2}x\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}-\frac{1}{4}\overline{\Delta}_{T}^{2}e^{2(x-x_{\text{th}})/\overline{\Delta}_{T}}\\
= & 1-\frac{1}{2}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}-\frac{1}{4}x^{2}+\frac{1}{2}x\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}-\frac{1}{4}\overline{\Delta}_{T}^{2}e^{2(x-x_{\text{th}})/\overline{\Delta}_{T}}\\
= & 1-\frac{1}{4}x^{2}+\frac{1}{2}\left(x-\frac{1}{2}\right)e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}-\frac{1}{4}\overline{\Delta}_{T}^{2}e^{2(x-x_{\text{th}})/\overline{\Delta}_{T}}
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Check 
\begin_inset Formula 
\[
f^{-1}\left[a(x)+b(x)\partial_{x}+\partial_{x}^{2}\right]f=a(x)+f^{-1}b(x)\left(-\frac{1}{2}x+\frac{1}{2}\overline{\Delta}_{T}e^{(x-x_{\text{th}})/\overline{\Delta}_{T}}\right)f+f^{-1}f''
\]

\end_inset


\end_layout

\end_inset


\end_layout

