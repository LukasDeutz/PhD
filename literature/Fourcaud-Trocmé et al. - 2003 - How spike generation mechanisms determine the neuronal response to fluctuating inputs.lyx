\begin_layout Itemize
Quadratic integrate-and-fire 
\begin_inset Formula 
\[
\psi(V)=\frac{g_{L}}{2\Delta_{T}}(V-V_{T})^{2}+g_{L}(V-V_{L})-I_{T}
\]

\end_inset


\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
If we insert this equation into 
\begin_inset Formula 
\[
C\frac{dV}{dt}=-g_{L}(V-V_{L})+\psi(V)+I_{\text{syn}}(t)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
we arrive at 
\begin_inset Formula 
\[
C\frac{dV}{dt}=\frac{g_{L}}{2\Delta_{T}}(V-V_{T})^{2}-I_{T}+I_{\text{syn}}(t)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Setting 
\begin_inset Formula $V=V_{T}$
\end_inset


\begin_inset Formula 
\[
C\frac{dV}{dt}=-I_{T}+I_{\text{syn}}(t)
\]

\end_inset

with 
\begin_inset Formula 
\begin{align*}
I_{T} & =g_{L}(V_{T}-V_{L})-\left(\frac{g_{L}}{2\Delta_{T}}(V_{T}-V_{T})^{2}+g_{L}(V_{T}-V_{L})-I_{T}\right)\\
I_{T} & =I_{T}
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Itemize
Exponential integrate-and-fire 
\begin_inset Formula 
\[
\psi(V)=g_{L}\Delta_{T}\exp\left(\frac{V-V_{T}}{\Delta_{T}}\right)
\]

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
We have 
\begin_inset Formula 
\[
\psi'(V_{T})=\frac{g_{L}\Delta_{T}}{\Delta_{T}}\exp\left(\frac{V_{T}-V_{T}}{\Delta_{T}}\right)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
We have 
\begin_inset Formula $V_{T}$
\end_inset


\begin_inset Formula 
\[
\Delta_{T}=\frac{g_{L}}{\psi''(V_{T})}=\frac{g_{L}}{g_{L}/\Delta_{T}}=\Delta_{T}
\]

\end_inset

Hence, 
\begin_inset Formula 
