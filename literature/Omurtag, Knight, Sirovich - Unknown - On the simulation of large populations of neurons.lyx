\begin_layout Itemize
Time evolution of a probability density 
\begin_inset Formula $\rho=\rho(\boldsymbol{v},t)$
\end_inset

 in the space determined by 
\begin_inset Formula $\boldsymbol{v}$
\end_inset


\end_layout

\begin_layout Itemize
How to determine 
\begin_inset Formula $\rho(\boldsymbol{v},t)$
\end_inset


\end_layout

\begin_layout Itemize
Imagine large number of replicas of the direct simulation 
\begin_inset Formula $N$
\end_inset


\end_layout

\begin_layout Itemize
External stimulus and connectivity matrix is drawn from ensemble 
\end_layout

\begin_layout Itemize
\begin_inset Formula $d\boldsymbol{v}$
\end_inset

 is a small volume in phase space 
\begin_inset Formula $n_{k}(\boldsymbol{v},t)d\boldsymbol{v}$
\end_inset

 is the number of neurons in 
\begin_inset Formula $d\boldsymbol{v}$
\end_inset

 at time 
\begin_inset Formula $t$
\end_inset

 of the 
\begin_inset Formula $k$
\end_inset

th replica
\end_layout

\begin_layout Itemize
Density 
\begin_inset Formula 
\[
n(\boldsymbol{v},t)=\left\langle n_{k}(\boldsymbol{v},t)\right\rangle =\lim_{N\rightarrow\infty}\frac{1}{N}\sum_{k}n_{k}(\boldsymbol{v},t)
\]

\end_inset


\end_layout

\begin_layout Itemize
Normalization 
\begin_inset Formula 
\[
\rho(\boldsymbol{v},t)=\frac{n(\boldsymbol{v},t)}{\int n(\boldsymbol{v},t)d\boldsymbol{v}}=\frac{n(\boldsymbol{v},t)}{P}
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $P=\int n(\boldsymbol{v},t)d\boldsymbol{v}$
\end_inset

 number of neurons in each replicate population 
\begin_inset Formula 
\[
\int n(\boldsymbol{v},t)d\boldsymbol{v}=\frac{1}{N}\sum_{k=1}^{N}\int n_{k}(\boldsymbol{v},t)d\boldsymbol{v}=\frac{1}{N}\sum_{k=1}^{N}P=P
\]

\end_inset


\end_layout

\begin_layout Itemize
Calculate average firing rate per neuron 
\begin_inset Formula $r(t)$
\end_inset


\begin_inset Formula 
\[
r(t)=\frac{1}{P}\lim_{\Delta t\rightarrow0}\left\langle \frac{1}{\Delta t}\int_{t}^{t+\Delta t}dt\sum_{m\neq0}\sum_{n}\delta(t-t_{n}^{m})\right\rangle 
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Sum over all neurons sum over all spike times in interval 
\begin_inset Formula $\Delta t$
\end_inset

 
\end_layout

\begin_layout Itemize
Average over replica 
\end_layout

\begin_layout Itemize
Normalize by number of neurons 
\begin_inset Formula $P$
\end_inset

 and interval width 
\begin_inset Formula $\Delta t$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Part of arriving firing rate due to external sources 
\begin_inset Formula 
\[
\sigma^{0}(t)=\lim_{\Delta t\rightarrow0}\left\langle \frac{1}{\Delta t}\int_{t}^{t+\Delta t}dt\sum_{n}\delta(t-t_{n}^{0})\right\rangle 
\]

\end_inset


\end_layout

\begin_layout Itemize
Neurons feels on average impulse rate
\begin_inset Formula 
\[
\sigma(t)=\sigma^{0}(t)+Gr(t)
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $G$
\end_inset

 is average number of afferent neurons 
\end_layout

\begin_layout Itemize
Dynamic mean field approximation 
\end_layout

\begin_layout Itemize
Denote by 
\begin_inset Formula $D$
\end_inset

 a small enough fixed volume in 
\begin_inset Formula $\boldsymbol{v}$
\end_inset

 space 
\end_layout

\begin_layout Itemize
Consider the rate of change of the number of elements in 
\begin_inset Formula $D$
\end_inset


\begin_inset Formula 
\begin{align*}
\frac{\partial}{\partial t}\int_{D}\rho\,dv & =-\int_{\partial D}\boldsymbol{F}(\boldsymbol{v})\cdot\boldsymbol{n}\rho\,d\omega\\
 & -\int_{D}d\boldsymbol{v}\left(\frac{\delta\rho}{\delta t}\right)_{imp}^{-}\\
 & +\int_{D}d\boldsymbol{v}\left(\frac{\delta\rho}{\delta t}\right)_{imp}^{+}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
First term 
\begin_inset Formula 
\[
\int_{\partial D}\boldsymbol{F}(\boldsymbol{v})\cdot\boldsymbol{n}\,\rho\,d\omega
\]

\end_inset


\end_layout

\begin_layout Itemize
Change of probability due to deterministic part of dynamics 
\end_layout

\begin_layout Itemize
Integrate over the surface and check if 
\begin_inset Formula $\boldsymbol{F}(\boldsymbol{v})$
\end_inset

 points inwards or or outwards 
\begin_inset Formula $D$
\end_inset

 and multiply with 
\begin_inset Formula $\rho$
\end_inset

 
\end_layout

\begin_layout Itemize
\begin_inset Formula $\boldsymbol{n}$
\end_inset

 is outward normal to the surface 
\begin_inset Formula $\partial D$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $d\omega$
\end_inset

 is the surface elements 
\end_layout

\begin_layout Itemize
Next to terms represent effect of synaptic impulses 
\end_layout

\begin_layout Itemize
Choose 
\begin_inset Formula $D$
\end_inset

 small enough so that every neuron within 
\begin_inset Formula $D$
\end_inset

 leaves receiving an impulse 
\end_layout

\begin_layout Itemize
Loss rate at point 
\begin_inset Formula $\boldsymbol{v}$
\end_inset

 at time 
\begin_inset Formula $t$
\end_inset


\begin_inset Formula 
\[
\left(\frac{\delta\rho}{\delta t}\right)_{imp}^{-}=\sigma(t)\rho(\boldsymbol{v},t)
\]

\end_inset


\end_layout

\begin_layout Itemize
Average arrival firing rate 
\begin_inset Formula $\sigma(t)$
\end_inset

 multiplied by 
\begin_inset Formula $\rho(\boldsymbol{v},t)$
\end_inset


\end_layout

\begin_layout Itemize
Neurons is kicked from 
\begin_inset Formula $V$
\end_inset

 to 
\begin_inset Formula $V'=V+h$
\end_inset

 with efficacy 
\begin_inset Formula 
\[
h=\frac{\hat{g}}{V_{s}}C
\]

\end_inset


\end_layout

\begin_layout Itemize
Gain rate 
\begin_inset Formula $\left(\frac{\delta\rho}{\delta t}\right)_{imp}^{+}$
\end_inset

, construct volume 
\begin_inset Formula $D''$
\end_inset

 such that under an impulse 
\begin_inset Formula $D''$
\end_inset

 goes into
\begin_inset Formula 
\[
v''(D'')\rightarrow v(D)
\]

\end_inset


\end_layout

\begin_layout Itemize
Since 
\begin_inset Formula $V$
\end_inset

 jumps by 
\begin_inset Formula $h$
\end_inset

, 
\begin_inset Formula $V''$
\end_inset

 must be given by 
\begin_inset Formula 
\[
V''=V''(V)=V-h
\]

\end_inset


\end_layout

\begin_layout Itemize
Hence, the gain rate is 
\begin_inset Formula 
\begin{align*}
\int_{D}\left(\frac{\delta\rho}{\delta t}\right)_{imp}^{+}d\boldsymbol{v} & =\sigma(t)\int_{D''}\rho(\boldsymbol{v}'')d\boldsymbol{v}''\\
 & =\sigma(t)\int_{D}\rho(\boldsymbol{v}''(\boldsymbol{v}))\frac{\partial\boldsymbol{v}''}{\partial\boldsymbol{v}}d\boldsymbol{v}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Because 
\begin_inset Formula $D$
\end_inset

 is small but otherwise arbitrary 
\begin_inset Formula 
\begin{align*}
\frac{\partial\rho}{\partial t} & =-\frac{\partial}{\partial\boldsymbol{v}}\left(F(\boldsymbol{v})\rho\right)-\sigma(t)\left\{ \rho(\boldsymbol{v},t)-\rho(\boldsymbol{v}''(\boldsymbol{v}),t)\right\} 
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Here, we used 
\begin_inset Formula $\frac{\partial\boldsymbol{v}''}{\partial\boldsymbol{v}}=1$
\end_inset


\end_layout

\begin_layout Itemize
Define flux 
\begin_inset Formula 
\[
\boldsymbol{J}_{imp}=-\sigma(t)\int_{V}^{V''(V)}dW\rho(W,v_{2},\ldots)\boldsymbol{e}_{V}
\]

\end_inset


\end_layout

\begin_layout Itemize
Leibniz rule 
\begin_inset Formula 
\[
\frac{\partial}{\partial V}\int_{V}^{V''(V)}dW\,\rho(W,v_{2},\ldots)=\rho(V''(V))\frac{\partial V''(V)}{\partial V}-\rho(V)\frac{\partial V}{\partial V}=\rho(V''(V))-\rho(V)
\]

\end_inset


\end_layout

\begin_layout Itemize
So that 
\begin_inset Formula 
\[
-\frac{\partial}{\partial\boldsymbol{v}}\boldsymbol{J}_{imp}=-\sigma(t)\left(\rho(V)-\rho(V''(V))\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Define 
\begin_inset Formula 
\[
\boldsymbol{J}_{str}=\rho\boldsymbol{F}(\boldsymbol{v})
\]

\end_inset


\end_layout

\begin_layout Itemize
Though, we artificially introduced 
\begin_inset Formula $\boldsymbol{J}_{imp}$
\end_inset

 flux to arrive at continuity equation
\begin_inset Formula 
\[
\frac{\partial\rho}{\partial t}=-\frac{\partial}{\partial\boldsymbol{v}}\boldsymbol{J}
\]

\end_inset


\end_layout

\begin_layout Itemize
Flux has the form a linear operator acting on density 
\begin_inset Formula 
\[
\boldsymbol{J}=\boldsymbol{C}(\sigma)\rho
\]

\end_inset


\end_layout

\begin_layout Itemize
Linear operator 
\begin_inset Formula 
\[
\boldsymbol{C}(\sigma)=\boldsymbol{F}(\boldsymbol{v})-\sigma(t)\int_{V}^{V''(V)}dV'\boldsymbol{e}_{V}
\]

\end_inset


\end_layout

\begin_layout Itemize
Integral is a linear operator 
\begin_inset Formula 
\[
\boldsymbol{C}(\sigma)(\alpha f+\beta g)=\alpha\boldsymbol{C}(\sigma)f+\beta\boldsymbol{C}(\sigma)g
\]

\end_inset


\end_layout

\begin_layout Itemize
Firing rate per neuron of population can be determined by the flux of neurons
 of the population passing a threshold 
\begin_inset Formula 
\[
r(t)=R[\boldsymbol{J}]
\]

\end_inset


\end_layout

\begin_layout Itemize
It is a functional of 
\begin_inset Formula $\boldsymbol{J}$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\boldsymbol{J}$
\end_inset

 depends on 
\begin_inset Formula $\sigma$
\end_inset

 and 
\begin_inset Formula $\sigma$
\end_inset

 depends 
\begin_inset Formula $r$
\end_inset

, so the above equation is not closed form (non linear)
\end_layout

\begin_layout Itemize
Integrating over the domain 
\begin_inset Formula $S$
\end_inset

 of the dynamical space
\begin_inset Formula 
\[
\frac{\partial}{\partial t}\int_{S}\rho(\boldsymbol{v}')d\boldsymbol{v}'=-\int_{\partial S}\boldsymbol{n}\cdot\boldsymbol{J}\,dS
\]

\end_inset


\end_layout

\begin_layout Itemize
Probability must be conserved
\begin_inset Formula 
\[
\int_{\partial S}\boldsymbol{n}\cdot\boldsymbol{J}\,dS=0
\]

\end_inset


\end_layout

\begin_layout Itemize
Resting state surface my be introduced in analogy to threshold surface
\end_layout

\begin_layout Itemize
Probability flux leaving the threshold surface must equal the probability
 flux entering the reset surface
\end_layout

\begin_layout Itemize
Generalization to interacting 
\begin_inset Formula $k=1,\ldots,M$
\end_inset

 subpopulations 
\end_layout

\begin_layout Itemize
Each population is described by 
\begin_inset Formula 
\[
\rho_{k}=\rho_{k}(\boldsymbol{v},t),\quad\boldsymbol{J}_{k}=\boldsymbol{C}_{k}(s_{k}^{0},\,r_{1},\ldots,r_{M})\rho_{k}
\]

\end_inset


\end_layout

\begin_layout Itemize
Continuity equation 
\begin_inset Formula 
\[
\frac{\partial\rho}{\partial t}=-\frac{\partial}{\partial\boldsymbol{v}}\boldsymbol{J}_{k}
\]

\end_inset


\end_layout

\begin_layout Itemize
Here 
\begin_inset Formula $s_{k}^{0}$
\end_inset

 denotes external firing rate to 
\begin_inset Formula $k$
\end_inset

th population 
\end_layout

\begin_layout Itemize
Firing rate of 
\begin_inset Formula $k$
\end_inset

th population 
\begin_inset Formula 
\[
r_{k}=R[\boldsymbol{J}_{k}],\quad k=1,2,\ldots,M
\]

\end_inset


\end_layout

