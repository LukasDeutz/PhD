\begin_layout Itemize
Dynamics 
\begin_inset Formula 
\[
\frac{d\boldsymbol{v}}{dt}=\boldsymbol{F}(\boldsymbol{v})+\boldsymbol{S}(\boldsymbol{v},\,g(t))
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\boldsymbol{F}(\boldsymbol{v})$
\end_inset

 is the field vector which caverns the deterministic neuron dynamics 
\end_layout

\begin_layout Itemize
\begin_inset Formula $\boldsymbol{S}(\boldsymbol{v},\,g(t))$
\end_inset

 incoming synaptic currents 
\end_layout

\begin_layout Itemize
Hudgkin and Huxley model 
\begin_inset Formula $\boldsymbol{v}=(V,\,m,\,h,\,n)$
\end_inset


\begin_inset Formula 
\begin{align*}
\frac{dV}{dt} & =\frac{1}{C}\left(g_{L}(V_{L}+V)+g_{n}m^{3}h(V_{N}-V)+g_{K}n^{4}(V_{K}-V)\right)+\frac{1}{C}g_{s}(t)(V_{s}-V),\\
\frac{dm}{dt} & =\frac{1}{\tau_{m}(V)}(m_{\infty}(V)-m),\\
\frac{dh}{dt} & =\frac{1}{\tau_{h}(V)}(h_{\infty}(V)-h),\\
\frac{dn}{dt} & =\frac{1}{\tau_{n}(V)}(n_{\infty}(V)-n).
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
We identify deterministic part
\begin_inset Formula 
\begin{align*}
F_{1}(\boldsymbol{v}) & =\frac{1}{C}\left(g_{L}(V_{L}+V)+g_{n}m^{3}h(V_{N}-V)+g_{K}n^{4}(V_{K}-V)\right),\\
F_{2}(\boldsymbol{v}) & =\frac{1}{\tau_{m}(V)}(m_{\infty}(V)-m),\\
F_{3}(\boldsymbol{v}) & =\frac{1}{\tau_{h}(V)}(h_{\infty}(V)-h),\\
F_{4}(\boldsymbol{v}) & =\frac{1}{\tau_{n}(V)}(n_{\infty}(V)-n).
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Only the first term of 
\begin_inset Formula $\boldsymbol{S}(\boldsymbol{v},\,g(t))$
\end_inset

 is nonzero 
\begin_inset Formula 
\[
S_{1}(\boldsymbol{v},g(t))=\frac{1}{C}g_{s}(t)(V_{s}-V)
\]

\end_inset


\end_layout

