\begin_layout Section*
Fokker-Planck equation for one Variable; Methods of Solution
\end_layout

\begin_layout Itemize
Methods for solving one-variable Fokker-Planck equation with time
\series bold
 independent
\series default
 drift and diffusion coefficient 
\begin_inset Formula 
\[
\frac{\partial W(x,t)}{\partial t}=L_{\text{FP}}W(x,t)=-\frac{\partial}{\partial x}S(x,t)
\]

\end_inset

where 
\begin_inset Formula 
\[
L_{\text{FP}}(x)=-\frac{\partial}{\partial x}D_{1}(x)+\frac{\partial}{\partial x^{2}}D_{2}(x)
\]

\end_inset


\end_layout

\begin_layout Subsection*
Normalization
\end_layout

\begin_layout Itemize
By suitable transformation 
\begin_inset Formula $x'=y(x)$
\end_inset

, the 
\begin_inset Formula $x$
\end_inset

-dependent diffusion coefficient can be transformed to an arbitrary constant
 
\begin_inset Formula $D>0$
\end_inset


\end_layout

\begin_layout Itemize
For the one-variable case, new diffusion and drift coefficients are given
 by
\begin_inset Formula 
\begin{align*}
D'_{1} & =\left(\frac{\partial y}{\partial x}\right)D_{1}+\left(\frac{\partial^{2}y}{\partial x^{2}}\right)D_{2}\\
D'_{2} & =\left(\frac{\partial y}{\partial x}\right)^{2}D_{2}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Use transformation 
\begin_inset Formula 
\[
y=y(x)=\int_{x_{0}}^{x}\sqrt{\frac{D}{D_{2}(x')}}dx'
\]

\end_inset


\end_layout

\begin_layout Itemize
Take the derivative 
\begin_inset Formula 
\[
\frac{\partial y(x)}{\partial x}=\sqrt{\frac{D}{D_{2}(x)}}
\]

\end_inset

which leads to a constant diffusion coefficient in the new coordinates 
\begin_inset Formula 
\[
D'_{2}=D
\]

\end_inset


\end_layout

\begin_layout Itemize
