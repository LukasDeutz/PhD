\begin_layout Subsection*
Ornstein-Uhlenbeck process
\end_layout

\begin_layout Itemize
Nonstationary solution of the Fokker-Planck equation are more difficult
 to obtain 
\end_layout

\begin_layout Itemize
General expression for the nonstationary solution can only be found for
 special drift and diffusion coefficients 
\end_layout

\begin_layout Standard

\series bold
Wiener process
\end_layout

\begin_layout Itemize
Drift coefficient 
\begin_inset Formula $D_{1}=0$
\end_inset

 and diffusion coefficient 
\begin_inset Formula $D_{2}=D$
\end_inset

 is constant 
\begin_inset Formula 
\[
\frac{\partial P}{\partial t}=D\frac{\partial^{2}P}{\partial x^{2}}
\]

\end_inset


\end_layout

\begin_layout Itemize
Initial condition 
\begin_inset Formula 
\[
P(x,t\bigl|x',t)=\delta(x-x')
\]

\end_inset


\end_layout

\begin_layout Itemize
Solution for 
\begin_inset Formula $t\geq t'$
\end_inset

 reads 
\begin_inset Formula 
\[
P(x,t\bigl|x',t)=\frac{1}{\sqrt{4\pi D(t-t')}}\exp\left(-\frac{(x-x')^{2}}{4D(t-t')}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Note that the variance is proportional to the time difference 
\begin_inset Formula $t-t'$
\end_inset

 which means that 
\begin_inset Formula $P(x,t\bigl|x',t)$
\end_inset

 becomes wider in the order of 
\begin_inset Formula $\sqrt{t-t'}$
\end_inset

 
\end_layout

\begin_layout Itemize
Wiener process diverges with time
\end_layout

\begin_layout Itemize
Sometimes 
\begin_inset Formula $P(x,t\bigl|x',t)$
\end_inset

 is called Green's function 
\end_layout

\begin_layout Itemize
General solution for probability density with initial distribution 
\begin_inset Formula $W(x',t')$
\end_inset

 is then given by 
\begin_inset Formula 
\[
W(x,t)=\int dx'P(x,t\bigl|x',t')W(x',t')
\]

\end_inset

which reads like a convolution
\end_layout

\begin_layout Standard

\series bold
Ornstein-Uhlenbeck process
\end_layout

\begin_layout Itemize
Drift and diffusion coefficient 
\begin_inset Formula 
\begin{align*}
D_{1}(x) & =-\gamma x\\
D_{2}(x) & =D=\text{const}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Equation for transition probability reads 
\begin_inset Formula 
\[
\frac{\partial P}{\partial t}=\gamma\frac{\partial}{\partial x}(xP)+D\frac{\partial^{2}}{\partial x^{2}}P
\]

\end_inset


\end_layout

\begin_layout Itemize
Solution is best found by making a Fourier transform with respect to 
\begin_inset Formula $x$
\end_inset


\begin_inset Formula 
\[
P(k,t\bigl|x',t')=\int dx\,e^{-ikx}\hat{P}(x,t\bigl|x',t')
\]

\end_inset


\end_layout

\begin_layout Itemize
Partial differential equation after the Fourier transform reads 
\begin_inset Formula 
\[
\frac{\partial\hat{P}}{\partial t}=-\gamma k\frac{\partial}{\partial k}\hat{P}-Dk^{2}P
\]

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
Proof
\begin_inset Note Note
status collapsed

\begin_layout Itemize
Start from 
\begin_inset Formula 
\[
\frac{\partial P}{\partial t}=\gamma\frac{\partial}{\partial x}(xP)+D\frac{\partial^{2}}{\partial x^{2}}P=\gamma P+x\frac{\partial}{\partial x}P
\]

\end_inset


\end_layout

\begin_layout Itemize
Taking the Fourier transform on both sides with respect to 
\begin_inset Formula $x$
\end_inset


\begin_inset Formula 
\[
\frac{\partial\hat{P}}{\partial t}=\gamma\hat{P}+\gamma F[x\frac{\partial}{\partial x}P]-Dk^{2}\hat{P}
\]

\end_inset


\end_layout

\begin_layout Itemize
Fourier transform 
\begin_inset Formula 
\begin{align*}
F[x\frac{\partial}{\partial x}P] & =\int_{-\infty}^{\infty}dx\,e^{ikx}x\frac{\partial}{\partial x}P\\
 & =-i\int dx\left(\frac{\partial}{\partial k}e^{ikx}\right)\frac{\partial}{\partial x}P\\
 & =-i\frac{\partial}{\partial k}\int dx\,e^{ikx}\frac{\partial}{\partial x}P\\
 & =(-i)^{2}\frac{\partial}{\partial k}(k\hat{P})\\
 & =-\hat{P}-k\frac{\partial\hat{P}}{\partial k}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
We arrive at 
\begin_inset Formula 
\begin{align*}
\frac{\partial\hat{P}}{\partial t} & =\gamma\hat{P}-\gamma\hat{P}-\gamma k\frac{\partial\hat{P}}{\partial k}-Dk^{2}\hat{P}\\
\frac{\partial\hat{P}}{\partial t} & =-\gamma k\frac{\partial\hat{P}}{\partial k}-Dk^{2}\hat{P}
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Itemize
This is simpler because it only contains the first-order derivative with
 respect to 
\begin_inset Formula $k$
\end_inset


\end_layout

\begin_layout Itemize
Initial condition for the Fourier transform is 
\begin_inset Formula 
\[
\hat{P}(k,t'\bigl|x',t')=e^{-ikx'}
\]

\end_inset


\end_layout

\begin_layout Itemize
Solve first order equation by the methods of characteristics 
\begin_inset Formula 
\[
P(k,t\bigl|x',t')=\exp\left(-ikx'e^{-\gamma(t-t')}-\frac{Dk^{2}(1-e^{-2\gamma(t-t'})}{2\gamma}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Performing back transform 
\begin_inset Formula 
\[
P(x,t\bigl|x',t')=\sqrt{\frac{\gamma}{2\pi D(1-e^{-2\gamma(t-t')})}}\exp\left(-\frac{\gamma(x-e^{-\gamma(t-t')}x')^{2}}{2D(1-e^{-2\gamma(t-t')})}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
For positive 
\begin_inset Formula $\gamma$
\end_inset

 and 
\begin_inset Formula $\gamma(t-t')\gg1$
\end_inset

 we recover the stationary distribution 
\end_layout

\begin_layout Subsection*
Eigenfunction expansion
\end_layout

\begin_layout Itemize
We want to find nonstationary solutions for 
\begin_inset Formula 
\begin{equation}
W_{t}=L_{\text{FP}}W=-S_{x}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Separation ansatz 
\begin_inset Formula $W=\varphi(x)\phi(t)$
\end_inset


\begin_inset Formula 
\begin{equation}
\varphi\phi_{t}=\phi L_{\text{FP}}\varphi
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Divide by 
\begin_inset Formula $W$
\end_inset


\begin_inset Formula 
\begin{equation}
\frac{\phi_{t}}{\phi}=\frac{L_{\text{FP}}\varphi}{\varphi}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Both sides have to equivalent for each 
\begin_inset Formula $t$
\end_inset

