Ornstein-Uhlenbeck Process 
\end_layout

\begin_layout Itemize
Langevin equation of the type 
\begin_inset Formula 
\begin{equation}
\dot{\xi}_{i}+\sum_{j=1}^{N}\gamma_{ij}\xi_{j}=\Gamma_{i}(t)
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\delta$
\end_inset

-correlated Gaussian distributed Langevin forces 
\begin_inset Formula 
\begin{equation}
\bigl\langle\Gamma_{i}(t)\bigr\rangle=0,\quad\bigl\langle\Gamma_{i}(t)\Gamma_{j}(t')\bigr\rangle=q_{ij}\delta(t-t'),\quad q_{ij}=q_{ji}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Features: 
\end_layout

\begin_deeper
\begin_layout Itemize
Homogeneous equation are linear
\end_layout

\begin_layout Itemize
Coefficients 
\begin_inset Formula $q_{ij}$
\end_inset

 describing strength of the noise to not depend on variable 
\begin_inset Formula $\xi_{k}$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Langevin equation for Brownian motion is simplest form of OU-process with
 
\begin_inset Formula $N=1$
\end_inset


\end_layout

\begin_layout Itemize
Find a solution for initial condition 
\begin_inset Formula $\xi_{i}(0)=x_{i}$
\end_inset

 
\end_layout

\begin_layout Itemize
Matrix notation 
\begin_inset Formula 
\begin{equation}
\dot{\boldsymbol{\xi}}+\boldsymbol{\gamma}\boldsymbol{\xi}=\boldsymbol{\Gamma}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Green's function 
\begin_inset Formula $\boldsymbol{G}(t)=e^{-\boldsymbol{\gamma}t}$
\end_inset


\begin_inset Formula 
\begin{equation}
\boldsymbol{\xi}=\boldsymbol{G}(t)\boldsymbol{x}+\int_{0}^{t}dt'\boldsymbol{G}(t-t')\boldsymbol{\Gamma}(t')
\end{equation}

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
Detailed calculation
\end_layout

\begin_layout Plain Layout
\begin_inset Note Note
status collapsed

\begin_layout Itemize
Start from 
\begin_inset Formula 
\[
\dot{\boldsymbol{\xi}}+\boldsymbol{\gamma}\boldsymbol{\xi}=\boldsymbol{\Gamma}
\]

\end_inset


\end_layout

\begin_layout Itemize
Multiply with integration factor (matrix) 
\begin_inset Formula $\boldsymbol{c}(t)$
\end_inset

 such that 
\begin_inset Formula $\dot{\boldsymbol{c}}(t)=\boldsymbol{\gamma}\boldsymbol{c}(t)$
\end_inset


\begin_inset Formula 
\begin{align*}
\dot{\boldsymbol{\xi}}\boldsymbol{c}+\boldsymbol{\gamma}\boldsymbol{\xi}\boldsymbol{c} & =\boldsymbol{\Gamma}\boldsymbol{c}\\
\Leftrightarrow\dot{\boldsymbol{\xi}}\boldsymbol{c}+\boldsymbol{\xi}\dot{\boldsymbol{c}} & =\boldsymbol{\Gamma}\boldsymbol{c}\\
\Leftrightarrow\dot{(\boldsymbol{\xi}\boldsymbol{c})} & =\boldsymbol{\Gamma}\boldsymbol{c}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Integrating 
\begin_inset Formula 
\[
\boldsymbol{\xi}\boldsymbol{c}=\int_{0}^{t}dt'\boldsymbol{\Gamma}\boldsymbol{c}+\boldsymbol{\alpha}
\]

\end_inset


\end_layout

\begin_layout Itemize
Initial condition determines 
\begin_inset Formula $\alpha$
\end_inset


\begin_inset Formula 
\[
\boldsymbol{\xi}(0)=\boldsymbol{x}=\boldsymbol{c}(0)^{-1}\boldsymbol{\alpha}
\]

\end_inset


\end_layout

\begin_layout Itemize
With 
\begin_inset Formula $\boldsymbol{c}(t)=e^{\boldsymbol{\gamma}t}$
\end_inset

 we find 
\begin_inset Formula $\boldsymbol{\alpha}=\boldsymbol{x}$
\end_inset

 
\begin_inset Formula 
\begin{align*}
\boldsymbol{\xi}(t) & =\boldsymbol{c}^{-1}(t)\boldsymbol{x}+\int_{0}^{t}dt'\boldsymbol{c}^{-1}(t)\boldsymbol{c}(t')\boldsymbol{\Gamma}(t')\\
 & =e^{-\boldsymbol{\gamma}t}\boldsymbol{x}+\int_{0}^{t}dt'e^{-\boldsymbol{\gamma}(t'-t)}\boldsymbol{\Gamma}(t')
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\end_inset


\end_layout

