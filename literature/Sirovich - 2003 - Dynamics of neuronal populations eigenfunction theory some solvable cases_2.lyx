\begin_layout Itemize
The matrix 
\begin_inset Formula $\boldsymbol{L}$
\end_inset

 has just one eigenvalue 
\begin_inset Formula $-1$
\end_inset

 with eigenvector 
\begin_inset Formula $(0,0,\ldots,1)^{\dagger}$
\end_inset


\end_layout

\begin_layout Itemize
Only the last component of 
\begin_inset Formula $\hat{\boldsymbol{\rho}}$
\end_inset

figures in the solution 
\begin_inset Formula $\boldsymbol{D},$
\end_inset

 and this is given by
\begin_inset Formula 
\[
\hat{\rho}_{N}(v,t)=e^{-\tau}\sum_{k=1}^{N}\frac{(\tau_{h}T_{h})^{N-k}}{(N-k)!}\rho_{k}^{0}(v)=e^{-\tau}\sum_{k=1}^{N}\frac{\tau^{N-k}}{(N-k)!}\rho_{k}^{0}(v-(N-k)h)
\]

\end_inset


\end_layout

\begin_layout Itemize
From this find 
\begin_inset Formula 
\[
\int_{1-h}^{1}\hat{\rho}_{N}(w,t)=e^{-\tau}\sum_{k=1}^{N}\frac{\tau^{N-k}}{(N-k)!}f_{k}^{0}
\]

\end_inset

where 
\begin_inset Formula 
\[
f_{k}^{0}=\int_{(k-1)h}^{kh}\rho^{0}(v)dv
\]

\end_inset

is the initial fraction of probability in the 
\begin_inset Formula $k$
\end_inset

th interval 
\begin_inset Note Note
status open

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\frac{d}{d\tau}D_{1} & =-D_{1}+A=-D_{1}+D_{N}+\int_{1-h}^{1}\hat{\rho}_{N}(\omega)d\omega\\
 & =-D_{1}+D_{N}+e^{-\tau}\sum_{k=1}^{N}\frac{\tau^{N-k}}{(N-k)!}f_{k}^{0}
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Itemize
If we write 
\begin_inset Formula 
\[
\boldsymbol{g}^{\dagger}=\left[\int_{1-h}^{h}\hat{\rho}_{N}(\omega,\tau)d\omega,0,\ldots,0\right]
\]

\end_inset


\end_layout

\begin_layout Itemize
Delta function strengths 
\begin_inset Formula $\boldsymbol{D}^{\dagger}=[D_{1},D_{2},\ldots,D_{N}]$
\end_inset

 satisfy 
\begin_inset Formula 
\begin{align*}
\frac{d}{d\tau}\boldsymbol{D} & =\boldsymbol{C}\boldsymbol{D}+\boldsymbol{g}\\
\boldsymbol{D}(\tau=0) & =0
\end{align*}

\end_inset

with the circulant matrix 
\begin_inset Formula 
\[
\boldsymbol{C}=\begin{pmatrix}-1 &  &  &  & 1\\
1 & \ddots\\
 & \ddots\\
\\
0 &  &  & 1 & -1
\end{pmatrix}
\]

\end_inset


\begin_inset Note Note
status collapsed

