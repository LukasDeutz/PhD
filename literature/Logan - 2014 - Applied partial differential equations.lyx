\begin_layout Plain Layout
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
Heat equation 
\begin_inset Formula 
\[
u_{t}=ku_{xx}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
First, define 
\begin_inset Formula $4kt=\alpha$
\end_inset

 such that
\begin_inset Formula 
\[
u(x,t)=\frac{1}{\sqrt{\pi\alpha}}e^{-\frac{x^{2}}{\alpha}}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Second derivative 
\begin_inset Formula 
\begin{align*}
u_{xx} & =\frac{1}{\sqrt{\pi\alpha}}\partial_{x}\left(-\frac{2x}{\alpha}e^{-\frac{x^{2}}{\alpha}}\right)\\
 & =-\frac{2}{\sqrt{\pi\alpha^{3}}}\partial_{x}xe^{-\frac{x^{2}}{\alpha}}\\
 & =\frac{2}{\sqrt{\pi\alpha^{3}}}\left(\frac{2x^{2}}{\alpha}-1\right)e^{-\frac{x^{2}}{\alpha}}
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Temporal derivative 
\begin_inset Formula 
\begin{align*}
u_{t} & =\frac{1}{\sqrt{\pi4kt}}e^{-\frac{x^{2}}{4kt}}\\
 & =\frac{1}{\sqrt{\pi\alpha}}\left(-\frac{1}{2t}+\frac{x^{2}}{\alpha t}\right)e^{-\frac{x^{2}}{\alpha}}\\
 & =\frac{1}{2\sqrt{\pi\alpha}t}\left(\frac{2x^{2}}{\alpha}-1\right)e^{-\frac{x^{2}}{\alpha}}
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
So we need to show that 
\begin_inset Formula 
\begin{align*}
\frac{2k}{\sqrt{\pi\alpha^{3}}} & =\frac{1}{2\sqrt{\pi\alpha}t}\\
\Leftrightarrow\frac{2k}{a} & =\frac{1}{2t}
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Inserting 
\begin_inset Formula $\alpha=4kt$
\end_inset

 on the left hand side yields
\begin_inset Formula 
\[
\frac{1}{2t}=\frac{1}{2t}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
At 
\begin_inset Formula $t=0$
\end_inset

, the solution becomes a dirac delta 
\begin_inset Formula 
\[
u(x,0)=\delta(x)
\]

\end_inset


\end_layout

