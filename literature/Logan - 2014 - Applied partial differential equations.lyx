\begin_inset Note Note
status open

\begin_layout Plain Layout
Solution
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
Leibniz rule
\begin_inset Formula 
\[
\frac{d}{dt}\int_{a(t)}^{b(t)}dx\,f(x,t)=\int_{a(t)}^{b(t)}f_{t}(x,t)+f(b(t))b'(t)-f(a(t))a'(t)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Second derivative with respect to 
\begin_inset Formula $t$
\end_inset


