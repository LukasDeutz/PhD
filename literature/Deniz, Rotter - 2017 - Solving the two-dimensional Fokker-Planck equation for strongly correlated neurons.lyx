\begin_layout Plain Layout
Start from 
\begin_inset Formula 
\[
\begin{bmatrix}\phi_{1}(\lambda,x_{t}) & \phi_{2}(\lambda,x_{t}) & 0\\
\phi_{1}(\lambda,x_{r}) & \phi_{2}(\lambda,x_{r}) & -\phi_{2}(\lambda,x_{r})\\
\phi'_{1}(\lambda,x_{r})-\phi'_{1}(\lambda,x_{t}) & \phi'_{2}(\lambda,x_{r})-\phi'_{2}(\lambda,x_{t}) & -\phi'_{2}(\lambda,x_{r})
\end{bmatrix}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
The first row yields 
\begin_inset Formula 
\[
a(\lambda)=-\frac{\phi_{2}(\lambda,x_{t})}{\phi_{1}(\lambda,x_{t})}b(\lambda)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
The second row yields 
\begin_inset Formula 
\begin{align*}
b(\lambda) & =\frac{d(\lambda)\phi_{2}(\lambda,x_{r})-a(\lambda)\phi_{1}(\lambda,x_{r})}{\phi_{2}(\lambda,x_{r})}
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Substituting into the first equation yields 
\begin_inset Formula 
\begin{align*}
a(\lambda) & =\frac{-d(\lambda)\phi_{2}(\lambda,x_{r})\phi_{2}(\lambda,x_{t})+a(\lambda)\phi_{1}(\lambda,x_{r})\phi_{2}(\lambda,x_{t})}{\phi_{1}(\lambda,x_{t})\phi_{2}(\lambda,x_{r})}\\
\frac{\phi_{1}(\lambda,x_{t})\phi_{2}(\lambda,x_{r})-\phi_{1}(\lambda,x_{r})\phi_{2}(\lambda,x_{t})}{\phi_{1}(\lambda,x_{t})\phi_{2}(\lambda,x_{r})}a(\lambda) & =\frac{-\phi_{2}(\lambda,x_{r})\phi_{2}(\lambda,x_{t})}{\phi_{1}(\lambda,x_{t})\phi_{2}(\lambda,x_{r})}d(\lambda)\\
a(\lambda) & =\frac{\phi_{2}(\lambda,x_{r})\phi_{2}(\lambda,x_{t})}{\phi_{1}(\lambda,x_{r})\phi_{2}(\lambda,x_{t})-\phi_{1}(\lambda,x_{t})\phi_{2}(\lambda,x_{r})}d(\lambda)
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Rewrite as 
\begin_inset Formula 
\[
a(\lambda)=\frac{\phi_{2}(\lambda,x_{r})}{\phi_{1}(\lambda,x_{r})-\phi_{1}(\lambda,x_{t})\phi_{2}(\lambda,x_{r})/\phi_{2}(\lambda,x_{t})}d(\lambda)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Using 
\begin_inset Formula 
\[
\phi_{2}(\lambda,x_{r})=\frac{\text{Wr}(x_{r})}{\text{Wr}(x_{t})}\phi_{2}(\lambda,x_{t})
\]

\end_inset


\end_layout

\begin_layout Plain Layout
we find 
\begin_inset Formula 
\[
a(\lambda)=\frac{\phi_{2}(\lambda,x_{r})\text{Wr}(x_{t})}{\text{Wr}(x_{t})\phi_{1}(\lambda,x_{r})-\phi_{1}(\lambda,x_{t})\text{Wr}(x_{r})}d(\lambda)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Using 
\begin_inset Formula $\text{Wr}(x)=2e^{-x^{2}}$
\end_inset

 we arrive at 
\begin_inset Formula 
\begin{align*}
a(\lambda) & =\frac{\phi_{2}(\lambda,x_{r})e^{-x_{t}^{2}}}{e^{-x_{t}^{2}}\phi_{1}(\lambda,x_{r})-\phi_{1}(\lambda,x_{t})e^{-x_{r}^{2}}}d(\lambda)\\
 & =\frac{e^{x_{r}^{2}}\phi_{2}(\lambda,x_{r})}{e^{x_{r}^{2}}\phi_{1}(\lambda,x_{r})-e^{x_{t}^{2}}\phi_{1}(\lambda,x_{t})}d(\lambda)
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
For the second coefficients 
\begin_inset Formula 
\begin{align*}
b(\lambda) & =\frac{d(\lambda)\phi_{2}(\lambda,x_{r})-\frac{e^{x_{r}^{2}}\phi_{2}(\lambda,x_{r})}{e^{x_{r}^{2}}\phi_{1}(\lambda,x_{r})-e^{x_{t}^{2}}\phi_{1}(\lambda,x_{t})}d(\lambda)\phi_{1}(\lambda,x_{r})}{\phi_{2}(\lambda,x_{r})}\\
 & =\frac{(e^{x_{r}^{2}}\phi_{1}(\lambda,x_{r})-e^{x_{t}^{2}}\phi_{1}(\lambda,x_{t}))\phi_{2}(\lambda,x_{r})-e^{x_{r}^{2}}\phi_{2}(\lambda,x_{r})\phi_{1}(\lambda,x_{r})}{\phi_{2}(\lambda,x_{r})(e^{x_{r}^{2}}\phi_{1}(\lambda,x_{r})-e^{x_{t}^{2}}\phi_{1}(\lambda,x_{t}))}d(\lambda)\\
 & =\frac{-e^{x_{t}^{2}}\phi_{1}(\lambda,x_{t})}{e^{x_{r}^{2}}\phi_{1}(\lambda,x_{r})-e^{x_{t}^{2}}\phi_{1}(\lambda,x_{t})}d(\lambda)
\end{align*}

\end_inset


\end_layout

\end_inset


