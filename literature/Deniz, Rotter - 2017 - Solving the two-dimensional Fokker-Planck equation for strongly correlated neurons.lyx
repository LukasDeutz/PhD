\begin_inset Formula 
\begin{align*}
u_{x} & =ux\\
u_{xx} & =(ux)_{x}\\
 & =u_{x}x+u\\
 & =ux^{2}+u
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Hence, 
\begin_inset Formula 
\begin{align*}
V(x) & =-x^{2}+\frac{1}{2}x^{2}+\frac{1}{2}\\
 & =-\frac{1}{2}x^{2}++\frac{1}{2}
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
so that
\begin_inset Formula 
\[
u^{-1}\mathcal{L}^{\dagger}u=-\frac{1}{2}x^{2}+1+\frac{1}{2}\partial_{x}^{2}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Check 
\begin_inset Formula 
\begin{align*}
u^{-1}\left(-x\partial_{x}+\frac{1}{2}\partial_{x}^{2}\right)u & =u^{-1}\left(-x^{2}u-xu\partial_{x}+\frac{1}{2}\partial_{x}\left(ux+u\partial_{x}\right)\right)\\
 & =u^{-1}\left(-x^{2}u-xu\partial_{x}+\frac{1}{2}\left(ux^{2}+u+ux\partial_{x}+xu\partial_{x}+u\partial_{x}^{2}\right)\right)\\
 & =u^{-1}\left(-x^{2}u-xu\partial_{x}+\frac{1}{2}ux^{2}+\frac{1}{2}u+ux\partial_{x}+\frac{1}{2}u\partial_{x}^{2}\right)\\
 & =\left(-x^{2}+\frac{1}{2}x^{2}+\frac{1}{2}+\frac{1}{2}\partial_{x}^{2}\right)\\
