 & =-\left.\tilde{f}_{j}J_{i}\right|_{-\infty}^{x_{r}^{(-)}}-\int_{-\infty}^{x_{r}^{(-)}}dx\left(\frac{\partial}{\partial x}\tilde{f}_{j}\right)xf_{i}\left.-\frac{1}{2}\left(\frac{\partial}{\partial x}\tilde{f}_{j}\right)f_{i}\right|_{-\infty}^{x_{r}^{(-)}}+\frac{1}{2}\int_{-\infty}^{x_{r}^{(-)}}dx\left(\frac{\partial^{2}}{\partial x^{2}}\tilde{f}_{j}\right)\\
 & =-\left.\tilde{f}_{j}J_{i}\right|_{-\infty}^{x_{r}^{(-)}}\left.-\frac{1}{2}\left(\frac{\partial}{\partial x}\tilde{f}_{j}\right)f_{i}\right|_{-\infty}^{x_{r}^{(-)}}+\frac{1}{2}\int_{-\infty}^{x_{r}^{(-)}}dx\left\{ -xf_{i}\frac{\partial}{\partial x}\tilde{f}_{j}+f_{i}\frac{\partial^{2}}{\partial x^{2}}\tilde{f}_{j}\right\} \\
 & =-\left.\tilde{f}_{j}J_{i}\right|_{-\infty}^{x_{r}^{(-)}}\left.-\frac{1}{2}\left(\frac{\partial}{\partial x}\tilde{f}_{j}\right)f_{i}\right|_{-\infty}^{x_{r}^{(-)}}+\frac{1}{2}\int_{-\infty}^{x_{r}^{(-)}}dxf_{i}L^{\dagger}\tilde{f}_{j}
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
with 
\begin_inset Formula $L^{\dagger}=-x\frac{\partial}{\partial x}+\frac{1}{2}\frac{\partial^{2}}{\partial x^{2}}$
\end_inset

.Doing the same for the other half of the integral, we end up with four boundary
 terms in total 
\begin_inset Formula 
\[
\text{BT}=-\left.\tilde{f}_{j}J_{i}\right|_{-\infty}^{x_{r}^{(-)}}-\left.\tilde{f}_{j}J_{i}\right|_{x_{r}^{(+)}}^{x_{t}}\left.-\frac{1}{2}\left(\frac{\partial}{\partial x}\tilde{f}_{j}\right)f_{i}\right|_{-\infty}^{x_{r}^{(-)}}\left.-\frac{1}{2}\left(\frac{\partial}{\partial x}\tilde{f}_{j}\right)f_{i}\right|_{x_{r}^{(+)}}^{x_{t}}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Let's look at the boundary terms one by one 
\begin_inset Formula 
\[
\lim_{\epsilon\rightarrow0}\left(-\tilde{f}_{j}(x_{r}^{(-)})J(x_{r}^{(-)})-\tilde{f}_{j}(x_{t})J_{i}(x_{t})+\tilde{f}_{j}(x_{r}^{(+)})J_{i}(x_{r}^{(+)})-\frac{1}{2}\left(\frac{\partial}{\partial x}\tilde{f}_{j}(x_{r}^{(-)})\right)f_{i}(x_{r}^{(-)})+\frac{1}{2}\left(\frac{\partial}{\partial x}\tilde{f}_{j}(x_{r}^{(+)})\right)f_{i}(x_{r}^{(+)})\right)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
The first three terms yield 
\begin_inset Formula 
\begin{align*}
\tilde{f}_{j}(x_{r}^{(+)})J_{i}(x_{r}^{(+)})-\tilde{f}_{j}(x_{r}^{(-)})J(x_{r}^{(-)}) & =\tilde{f}_{j}(x_{t})J_{i}(x_{t})\\
\tilde{f}_{j}(x_{r})\left(J_{i}(x_{r}^{(+)})-J(x_{r}^{(-)})\right) & =\tilde{f}_{j}(x_{t})J_{i}(x_{t})\\
\tilde{f}_{j}(x_{r})J_{i}(x_{t},t-\tau_{\text{ref}}) & =\tilde{f}_{j}(x_{t})J_{i}(x_{t})
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
If 
\begin_inset Formula $\tau_{\text{ref}}=0$
\end_inset

, we find 
\begin_inset Formula 
\[
\tilde{f}_{j}(x_{r})=\tilde{f}_{j}(x_{t})
\]

\end_inset


\end_layout

\begin_layout Plain Layout
The last two terms yield 
\begin_inset Formula 
\begin{align*}
-\frac{1}{2}\left(\frac{\partial}{\partial x}\tilde{f}_{j}(x_{r}^{(-)})\right)f_{i}(x_{r}^{(-)})-\frac{1}{2}\left(\frac{\partial}{\partial x}\tilde{f}_{j}(x_{t}^{(-)})\right)f_{i}(x_{t}^{(-)})+\frac{1}{2}\left(\frac{\partial}{\partial x}\tilde{f}_{j}(x_{r}^{(+)})\right)f_{i}(x_{r}^{(+)}) & =0\\
\frac{1}{2}\left(\frac{\partial}{\partial x}\tilde{f}_{j}(x_{r}^{(+)})\right)f_{i}(x_{r}) & =\frac{1}{2}\left(\frac{\partial}{\partial x}\tilde{f}_{j}(x_{r}^{(-)})\right)f_{i}(x_{r})\\
\frac{\partial}{\partial x}\tilde{f}_{j}(x_{r}^{(+)}) & =\frac{\partial}{\partial x}\tilde{f}_{j}(x_{r}^{(-)})
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
where used that 
\begin_inset Formula $f_{i}$
\end_inset

 vanishes at 
\begin_inset Formula $x_{t}$
\end_inset

.
 We arrive at 
\begin_inset Formula 
\begin{align*}
\tilde{f}_{j}(x_{r}) & =\tilde{f}_{j}(x_{t})\\
\frac{\partial}{\partial x}\tilde{f}_{j}(x_{r}^{(+)}) & =\frac{\partial}{\partial x}\tilde{f}_{j}(x_{r}^{(-)})
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Itemize
We find the adjoint operator 
\begin_inset Formula 
\[
\mathcal{L}_{1}^{\dagger}\tilde{f}=-x\partial_{x}+\frac{1}{2}
\]

\end_inset


