\begin_inset Formula $X$
\end_inset

 with 
\begin_inset Formula $f_{X}(x)=\lambda\exp(-\lambda x)$
\end_inset


\end_layout

\begin_layout Itemize
Density of the sum of two independent random variables given by convolution
\end_layout

\begin_layout Itemize
This is leads to Erlang density
\begin_inset Formula 
\[
f_{S_{n}}(t)=\frac{\lambda^{n}t^{n-1}}{(n-1)!}e^{-\lambda t}
\]

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
Derivation:
\end_layout

\begin_layout Plain Layout
\begin_inset Note Note
status open

\begin_layout Itemize
Independent arrival times 
\begin_inset Formula 
\[
f_{X_{1}X_{2}}(x_{1},x_{2})=f_{X_{1}}(x_{1})f_{X_{2}}(x_{2})
\]

\end_inset


\end_layout

\begin_layout Itemize
Let 
\begin_inset Formula $S_{2}=X_{1}+X_{2}$
\end_inset

 and substitute
\begin_inset Formula $S_{2}-X_{1}$
\end_inset

 for 
\begin_inset Formula $X_{2}$
\end_inset


\begin_inset Formula 
\[
f_{X_{1}S_{2}}(x_{1},s_{2})=f_{X_{1}}(x_{1})f_{X_{2}}(s_{2}-x_{1})
\]

\end_inset


\end_layout

\begin_layout Itemize
Marginal distribution of 
\begin_inset Formula $s_{2}$
\end_inset

, integrate over 
\begin_inset Formula $x_{1}$
\end_inset


\begin_inset Formula 
\begin{align*}
f_{X_{1}S_{2}}(x_{1},s_{2}) & =\lambda^{2}e^{-\lambda x_{1}}e^{-\lambda(s_{2}-x_{1})}=e^{-\lambda s_{2}}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Joint distribution does not depend on 
\begin_inset Formula $x_{1}$
\end_inset


\end_layout

\begin_layout Itemize
Condition density 
\begin_inset Formula $X_{1}$
\end_inset

 given 
\begin_inset Formula $S_{2}=s_{2}$
\end_inset

 is uniform over 
\begin_inset Formula $0\leq x_{1}\leq s_{2}$
\end_inset


\end_layout

\begin_layout Itemize
Integration to obtain marginal distribution is multiplication by interval
 size 
\begin_inset Formula $s_{2}$
\end_inset


\begin_inset Formula 
\[
f_{S_{2}}(s_{2})=\lambda^{2}s_{2}e^{-\lambda s_{2}}
\]

\end_inset


\end_layout

\begin_layout Itemize
Arbitrary number of 
\begin_inset Formula $n$
\end_inset

 exponential arrivals 
\begin_inset Formula 
\[
f_{X_{1}\cdots X_{n-1},S_{n}}(x_{1},\ldots,x_{n-1},s_{n})=\lambda^{n}\exp(-\lambda s_{n})
\]

\end_inset


\end_layout

\begin_layout Itemize
Replace interarrival intervals 
\begin_inset Formula $X_{1},\ldots,X_{n-1}$
\end_inset

 with epochs 
\begin_inset Formula $S_{1},\ldots S_{n-1}$
\end_inset

 with 
\begin_inset Formula $S_{1}=X_{1}$
\end_inset

 and 
\begin_inset Formula $S_{i}=X_{i}+S_{i-1}$
\end_inset


\begin_inset Formula 
\[
f_{S_{1}\cdots S_{n}}(s_{1},\ldots,s_{n})=\lambda^{n}\exp(-\lambda s_{n})
\]

\end_inset


\end_layout

\begin_layout Itemize
Marginal distribution by integrating out 
\begin_inset Formula $s_{1},\ldots,s_{n-1}$
\end_inset

 yields
\begin_inset Formula 
\[
f_{S_{n}}(s_{n})=\frac{s_{n}^{n-1}}{(n-1)!}\lambda^{n}\exp(-\lambda s_{n})
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $s_{n}^{n-1}/(n-1)!$
\end_inset

 is the volume of the region 
\begin_inset Formula $s_{1},\ldots,s_{n-1}$
\end_inset

