\begin_layout Subsection
Synaptic input to integrate-and-fire neurons 
\end_layout

\begin_layout Subsubsection
Current synapses 
\end_layout

\begin_layout Itemize
Synaptic current
\end_layout

\begin_layout Itemize
Contribution of a single 
\begin_inset Formula $\delta$
\end_inset

-function input upon the membrane potential, is called the (normalized)
 postsynaptic response function 
\begin_inset Formula 
\[
\epsilon(t)=\frac{1}{\tau_{\text{m}}}e^{-t/\tau_{\text{m}}}\Theta(t)
\]

\end_inset


\end_layout

\begin_layout Itemize
Go beyond simple 
\begin_inset Formula $\delta$
\end_inset

-function synaptic input 
\begin_inset Formula 
\[
I_{\text{s}}=I_{0}e^{-t/\tau_{\text{s}}}\Theta(t)
\]

\end_inset


\end_layout

\begin_layout Itemize
Synaptic time constant is in general different for each type of neuron
\end_layout

\begin_layout Itemize
Normalized postsynaptic response function 
\begin_inset Formula 
\[
\epsilon(t)=\frac{e^{-t/\tau_{m}}-e^{-t/\tau_{s}}}{\tau_{\text{m}}-\tau_{\text{s}}}\Theta(t)
\]

\end_inset


\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
Membrane potential 
\begin_inset Formula 
\[
\dot{V}=-\frac{1}{\tau_{\text{m}}}V+I(t)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Postsynaptic current caused by spike at 
\begin_inset Formula $t=0$
\end_inset

 
\begin_inset Formula 
\[
I(t)=I_{0}e^{-t/\tau_{\text{s}}}\Theta(t)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Green's function of the the differential equation 
\begin_inset Formula 
\[
\dot{V}=-\frac{1}{\tau_{\text{m}}}V
\]

\end_inset


\end_layout

\begin_layout Plain Layout
is 
\begin_inset Formula $G(t)=e^{-\frac{t}{\tau_{\text{m}}}}$
\end_inset

.
 
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
V(t) & =\int_{0}^{t}dt'\,e^{-\frac{t-t'}{\tau}}I(t')
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Insert 
\begin_inset Formula 
\begin{align*}
V(t) & =\int_{0}^{t}dt'\,e^{-\frac{t-t'}{\tau_{\text{m}}}}e^{-\frac{t'}{\tau_{\text{s}}}}\\
 & =e^{-\frac{t}{\tau_{\text{m}}}}\int_{0}^{t}dt'\,e^{\frac{\tau_{\text{s}}-\tau_{\text{m}}}{\tau_{\text{m}}\tau_{\text{s}}}t'}\\
 & \sim\frac{1}{\tau_{\text{s}}-\tau_{\text{m}}}e^{-\frac{t}{\tau_{\text{m}}}}\left.e^{\frac{\tau_{\text{s}}-\tau_{\text{m}}}{\tau_{\text{m}}\tau_{\text{s}}}t'}\right|_{0}^{t}\\
 & =\frac{1}{\tau_{\text{s}}-\tau_{\text{m}}}e^{-\frac{t}{\tau_{\text{m}}}}\left(e^{\frac{\tau_{\text{s}}-\tau_{\text{m}}}{\tau_{\text{m}}\tau_{\text{s}}}t}-1\right)\\
 & =\frac{1}{\tau_{\text{m}}-\tau_{\text{s}}}\left(e^{-\frac{t}{\tau_{\text{m}}}}-e^{-\frac{t}{\tau_{\text{s}}}}\right)
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
The above function has a rise followed by decay 
\end_layout

\begin_layout Itemize
Note that the 
\begin_inset Formula $\epsilon$
\end_inset

 is always positive because the denominator changes sign if 
\begin_inset Formula $\tau_{\text{s}}>\tau_{\text{m}}$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Other forms of synaptic current input can be considered, 
\begin_inset Formula $\alpha$
\end_inset

-function 
\begin_inset Formula $I_{\text{s}}\propto te^{-\alpha t}$
\end_inset


\end_layout

\begin_layout Subsubsection
Conductance synapses 
\end_layout

\begin_layout Itemize
Synaptic current 
\begin_inset Formula 
\[
I_{\text{s}}(t)=C_{\text{m}}[V_{E}-v(t)]\sum_{k=1}^{N_{E}}g_{E,k}(t)+C_{\text{m}}[V_{I}-v(t)]\sum_{k=1}^{N_{E}}g_{I,k}(t)
\]

\end_inset


\end_layout

\begin_layout Itemize

\series bold
Reversal potential
\series default
 
\begin_inset Formula $V_{I}\leq V_{\text{reset}}$
\end_inset

 and 
\begin_inset Formula $V_{\text{reset}}<V_{\text{th}}<V_{E}$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
If 
\begin_inset Formula $v(t)<V_{E},$
\end_inset

 then EPS current is positive 
\end_layout

\begin_layout Itemize
If 
\begin_inset Formula $v(t)>V_{E},$
\end_inset

 then EPS current is negative 
\end_layout

\begin_layout Itemize
The same is true for the IPS current 
\end_layout

\begin_layout Itemize
Excitatory/inhibitory inputs drive the membrane potential to the respective
 reversal potential 
\end_layout

\end_deeper
\begin_layout Itemize
When the membrane potential passes through reversal potential the direction
 of the associated current flow switches 
\end_layout

\begin_layout Itemize
Reversal potential introduce a nonlinearity into summation of individual
 synaptic currents
\end_layout

\begin_deeper
\begin_layout Itemize
Inputs can not be summed because they depend on 
\begin_inset Formula $v(t)$
\end_inset


\end_layout

\begin_layout Itemize
If 
\begin_inset Formula $g_{\alpha,k}(t)$
\end_inset

 is replaced by stochastic quantity, dynamics are described by nonlinear
 Langevin equation (multiplicative noise)
\end_layout

\end_deeper
\begin_layout Subsection
Deterministic input to integrate-and-fire neurons
\end_layout

\begin_layout Itemize
Injected current 
\begin_inset Formula $I_{\text{inj}}$
\end_inset


\begin_inset Formula 
\[
v(t)=V_{0}+e^{-\tau/\tau_{\text{m}}}\int_{t_{0}}^{t}\frac{I_{\text{inj}}(t')}{C_{\text{m}}}e^{t'/\tau_{\text{m}}}dt'
\]

\end_inset


\end_layout

\begin_layout Itemize
Set 
\begin_inset Formula $V_{0}=V_{\text{reset}}$
\end_inset


\end_layout

\begin_layout Itemize
For fixed threshold and constant injected current, the time it takes for
 a spike to be generated is 
\begin_inset Formula 
\[
T_{\text{ISI}}=-\tau_{\text{m}}\ln\left[1-\frac{\theta}{IR_{\text{m}}}\right]
\]

\end_inset


\end_layout

\begin_layout Itemize
Spiking-rate 
\begin_inset Formula 
\[
\lambda_{\text{out}}=(\tau_{\text{r}}+T_{\text{ISI}})^{-1}
\]

\end_inset


\end_layout

\begin_layout Itemize
Peculiarity of integrate-and-fire neuron, slope of input-output curve 
\begin_inset Formula $\lambda_{\text{out}}(I)$
\end_inset

 has a singularity at 
\begin_inset Formula $I=I_{\text{th}}=\theta/R_{\text{m}}$
\end_inset

 
\end_layout

