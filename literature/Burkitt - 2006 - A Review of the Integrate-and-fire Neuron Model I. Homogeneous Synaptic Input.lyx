\begin_layout Subsection
Diffusion model 
\end_layout

\begin_layout Itemize
Notation 
\begin_inset Formula 
\[
\tau\frac{dv(t)}{dt}=-\left[v(t)-V_{0}\right]+\mu+\sigma\sqrt{2\tau}\xi(t)
\]

\end_inset


\end_layout

\begin_layout Subsubsection
Random walk model and Wiener process 
\end_layout

\begin_layout Subsubsection
Stein model and Ornstein-Uhlenbeck process 
