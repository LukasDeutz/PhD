\begin_layout Itemize
Drift and diffusion coefficients 
\begin_inset Formula 
\begin{align*}
\mu & =\tau_{\text{m}}(a_{E}\lambda_{E}-a_{I}\lambda_{I})\\
\sigma^{2} & =\frac{\tau_{\text{m}}}{2}\left(a_{E}^{2}\lambda_{E}+a_{I}^{2}\lambda_{I}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Subsubsection
Gaussian approximation 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
p(v,t)=\frac{1}{\sqrt{2\pi\sigma(t;v_{0})}}\exp\left\{ -\frac{[v-\mu(t;v_{0})]^{2}}{2\sigma^{2}(t;v_{0})}\right\} 
\]

\end_inset


\end_layout

\begin_layout Itemize
Gaussian approximation is accurate in the limit of large number of small-amplitu
de synaptic inputs 
\end_layout

\begin_layout Itemize

\series bold
Error scales
\series default
 as 
\begin_inset Formula $1/\sqrt{N}$
\end_inset

 
\end_layout

