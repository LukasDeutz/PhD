\begin_layout Subsection
Diffusion model 
\end_layout

\begin_layout Itemize
Notation 
\begin_inset Formula 
\[
\tau\frac{dv(t)}{dt}=-\left[v(t)-V_{0}\right]+\mu+\sigma\sqrt{2\tau}\xi(t)
\]

\end_inset


\end_layout

\begin_layout Subsubsection
Random walk model and Wiener process 
\end_layout

\begin_layout Subsubsection
Stein model and Ornstein-Uhlenbeck process 
\end_layout

\begin_layout Itemize
Drift and diffusion coefficients 
\begin_inset Formula 
\begin{align*}
\mu & =\tau_{\text{m}}(a_{E}\lambda_{E}-a_{I}\lambda_{I})\\
\sigma^{2} & =\frac{\tau_{\text{m}}}{2}\left(a_{E}^{2}\lambda_{E}+a_{I}^{2}\lambda_{I}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Subsubsection
Gaussian approximation 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
p(v,t)=\frac{1}{\sqrt{2\pi\sigma(t;v_{0})}}\exp\left\{ -\frac{[v-\mu(t;v_{0})]^{2}}{2\sigma^{2}(t;v_{0})}\right\} 
\]

\end_inset


\end_layout

\begin_layout Itemize
Gaussian approximation is accurate in the limit of large number of small-amplitu
de synaptic inputs 
\end_layout

\begin_layout Itemize
Error scales as 
\begin_inset Formula $1/\sqrt{N}$
\end_inset

 
\end_layout

\begin_layout Subsubsection
Stein model with conductance synapses 
\end_layout

\begin_layout Itemize
Dynamic are governed 
\begin_inset Formula 
\[
\tau_{\text{m}}\frac{dv(t)}{dt}=-[v(t)-V_{0}]+g_{E}[V_{E}-v(t)]S_{E}(t)+g_{I}[V_{I}-v(t)]S_{I}(t)
\]

\end_inset


\end_layout

\begin_layout Itemize
Discontinuous jumps associated with each synaptic input are now 
\series bold
state dependent
\series default
 
\end_layout

\begin_layout Itemize
Jump size depends on the value of the membrane potential 
\end_layout

\begin_layout Itemize
If 
\begin_inset Formula $v(t)$
\end_inset

 is close to reversal potential, then the jumps are small, otherwise they
 are large 
\end_layout

\begin_layout Itemize
The discontinuous nature of the trajectory, together with the nonlinear
 summation of the PSPs complicates the analytical study of the model 
\end_layout

\begin_layout Itemize
Convenient to model corresponding diffusion model 
\end_layout

\begin_layout Subsubsection
Renewal equation 
\end_layout

\begin_layout Itemize
Diffusion and Gaussian approximation, time at which the membrane potential,
 
\begin_inset Formula $v(t)$
\end_inset

, crosses the threshold 
\begin_inset Formula $V_{\text{th}}$
\end_inset

 for the first time 
\end_layout

\begin_layout Itemize
The first passage time density 
\begin_inset Formula $f_{\theta}(t)$
\end_inset

 represents the output interspike interval distribution 
\begin_inset Formula 
\[
p(V_{\text{th}},t\bigr|v_{0},t_{0})=\int_{t_{0}}^{t}dt'f_{\theta}(t')p(V_{\text{th}},t\bigr|v_{0},t')
\]

\end_inset

where 
\begin_inset Formula $p(v,t\bigr|v',t')$
\end_inset

 is the conditional probability defined in the description of the Gaussian
 approximation 
\end_layout

\begin_layout Itemize
\begin_inset Formula $p(V_{\text{th}},t\bigr|v_{0},t_{0})$
\end_inset

 considers all membrane potential traces including those which already passed
 the threshold at earlier time 
\begin_inset Formula $t'$
\end_inset


\end_layout

\begin_layout Itemize
Exact for 
\begin_inset Formula $\delta$
\end_inset

-synapses, otherwise it is approximate, since finite synaptic time constants
 introduce temporal correlations that destroy renewal property of the equation
 
\begin_inset Note Note
status open

\begin_layout Plain Layout
What is does renewal property means in this context 
\end_layout

\end_inset


\end_layout

\begin_layout Itemize
Solve renewal equation using Laplace transform and time-translation invariance
 
\begin_inset Formula $p(v,t\bigr|v_{0},t_{0})=p(v,t-t_{0}\bigr|v_{0},0)$
\end_inset


\end_layout

\begin_layout Subsection
Fokker-Planck formalism 
\end_layout

\begin_layout Itemize
Fokker-Planck formalism enables a systematic perturbative expansion that
 has proven useful in the study of finite synaptic time constants and temporal
 correlations 
\end_layout

\begin_layout Itemize
Average output or emission rate can be determined by average inter-spike
 interval 
\begin_inset Formula 
\[
\lambda_{\text{out}}=[\tau_{\text{r}}+\overline{T}_{\text{ISI}}]^{-1}
\]

\end_inset

where 
\begin_inset Formula $\overline{T}_{\text{ISI}}=\int_{0}^{\infty}dt\,t\,f_{\theta}(t)$
\end_inset


\end_layout

\begin_layout Itemize
Higher moments of the interspike interval distribution play important role
 in understanding the statistic of the model 
\end_layout

\begin_layout Itemize
Coefficient of variation 
\begin_inset Formula $C_{\text{V}}$
\end_inset

 of the interspike interval distribution 
\begin_inset Formula 
\[
C_{\text{V}}=\frac{\sqrt{\text{Var}[T_{\text{ISI}}]}}{\text{E}[T_{\text{ISI}}]}=\frac{\sqrt{\overline{(T_{\text{ISI}}-\overline{T}_{\text{ISI}})^{2}}}}{\text{E}[T_{\text{ISI}}]}
\]

\end_inset


\end_layout

