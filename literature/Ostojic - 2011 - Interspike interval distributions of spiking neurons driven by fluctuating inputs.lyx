\begin_layout Subsection*
Description of the dynamics 
\end_layout

\begin_layout Itemize
We follow membrane potential from 
\begin_inset Formula $V_{r}=0$
\end_inset

 and want to investigate when it reaches the threshold.
 Instead of looking at the first passage time distribution we drive probability
 density 
\begin_inset Formula $P(V,t)$
\end_inset

 with absorbing boundary 
\begin_inset Formula 
\[
P(V,0)=\delta(V-V_{r})
\]

\end_inset


\end_layout

\begin_layout Itemize
Initial condition 
\begin_inset Formula 
\[
P(V,0)=\delta(V-V_{r})
\]

\end_inset


\end_layout

\begin_layout Itemize
Once the trajectory crosses the threshold at time 
\begin_inset Formula $T$
\end_inset

, it does not contribute to 
\begin_inset Formula $P(V,t)$
\end_inset

 for 
\begin_inset Formula $t>T$
\end_inset


\end_layout

\begin_layout Itemize
Probability current through the threshold at time 
\begin_inset Formula $T$
\end_inset


\begin_inset Formula 
\[
P_{ISI}(T)=\left.-\frac{\sigma^{2}}{2\tau_{m}}\frac{\partial P}{\partial V}\right|_{V_{th}}
\]

\end_inset


\end_layout

\begin_layout Itemize
Because of the absorbing boundary condition at 
\begin_inset Formula $V_{th}$
\end_inset

, the probability density 
\begin_inset Formula $P(V,t)$
\end_inset

 obeys 
\begin_inset Formula $\int_{-\infty}^{V_{th}}P(V,t)dV+\int_{0}^{t}P_{ISI}(\tau)d\tau=1$
\end_inset


\end_layout

\begin_layout Itemize
The probability is loosing mass because neurons are not reset.
 The second term accounts for the average number of neurons which reached
 the threshold in 
\begin_inset Formula $[0,t]$
\end_inset


\end_layout

\begin_layout Itemize
Dynamics of the distribution 
\begin_inset Formula $P(V,t)$
\end_inset


\begin_inset Formula 
\[
\tau_{m}\frac{\partial P}{\partial t}=\mathcal{L}[P]
\]

\end_inset

where 
\begin_inset Formula 
\[
\mathcal{L}[P]=\frac{\partial}{\partial V}[V-\mu-\psi(V)]f+\frac{\sigma}{2}\frac{\partial^{2}}{\partial V^{2}}f
\]

\end_inset


\end_layout

\begin_layout Itemize
Operator with the absorbing condition 
\begin_inset Formula $f(V_{th})$
\end_inset

 is autoadjoint and negative definite so that eigenvalue are real and strictly
 negative 
\begin_inset Formula 
\[
\mathcal{L}[\phi_{i}]=-\lambda_{i}\phi_{i}
\]

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
Proof 
\begin_inset Note Note
status open

\begin_layout Plain Layout
Start from 
\begin_inset Formula 
\[
(\tilde{\psi},\mathcal{L}\psi)=(\mathcal{L}^{\dagger}\tilde{\psi},\psi)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Move derivatives on the other side 
\begin_inset Formula 
\begin{align*}
 & \int_{-\infty}^{v_{th}}dV\,\tilde{\psi}(V)\frac{\partial}{\partial V}\left([V-\mu-\psi(V)]+\frac{\sigma}{2}\frac{\partial}{\partial V}\right)\psi(V)\\
= & \left.\tilde{\psi}(V)\left([V-\mu-\psi(V)]+\frac{\sigma}{2}\frac{\partial}{\partial V}\right)\psi(V)\right|_{-\infty}^{v_{th}}+\int_{-\infty}^{v_{th}}dV\,\frac{\partial\tilde{\psi}(V)}{\partial V}\left([V-\mu-\psi(V)]\psi(V)+\frac{\sigma}{2}\frac{\partial}{\partial V}\right)\psi(V)\\
= & \left.\tilde{\psi}(V)\left([V-\mu-\psi(V)]+\frac{\sigma}{2}\frac{\partial}{\partial V}\right)\psi(V)\right|_{-\infty}^{v_{th}}-\int_{-\infty}^{v_{th}}dV\,[V-\mu-\psi(V)]\frac{\partial\tilde{\psi}(V)}{\partial V}\psi(V)+\int_{-\infty}^{v_{th}}dV\,\frac{\partial\tilde{\psi}(V)}{\partial V}\frac{\sigma}{2}\frac{\partial}{\partial V}\psi(V)\\
= & \left.\tilde{\psi}(V)\left([V-\mu-\psi(V)]+\frac{\sigma}{2}\frac{\partial}{\partial V}\right)\psi(V)\right|_{-\infty}^{v_{th}}-\int_{-\infty}^{v_{th}}dV\,[V-\mu-\psi(V)]\frac{\partial\tilde{\psi}(V)}{\partial V}\psi(V)-\left.\frac{\partial\tilde{\psi}(V)}{\partial V}\frac{\sigma}{2}\psi(V)\right|_{-\infty}^{V_{th}}+\int_{-\infty}^{v_{th}}dV\,\frac{\sigma}{2}\frac{\partial^{2}\tilde{\psi}(V)}{\partial V^{2}}
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Hence, 
\begin_inset Formula 
\begin{align*}
\mathcal{L}^{\dagger} & =-[V-\mu-\psi(V)]\frac{\partial}{\partial V}+\frac{\sigma}{2}\frac{\partial^{2}}{\partial V^{2}}\\
 & =\left.\tilde{\psi}(V)\left([V-\mu-\psi(V)]+\frac{\sigma}{2}\frac{\partial}{\partial V}\right)\psi(V)\right|_{-\infty}^{v_{th}}
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Itemize
The eigenfunctions 
\begin_inset Formula $\phi_{i}$
\end_inset

 form a complete set on which the membrane potential distribution 
\begin_inset Formula $P(V,t)$
\end_inset

 can be expanded 
\begin_inset Formula 
\[
P(V,t)=\sum_{i}\alpha_{i}\phi_{i}(V)e^{-\lambda_{i}\frac{t}{\tau_{m}}}
\]

\end_inset


\end_layout

\begin_layout Itemize
The coefficients 
\begin_inset Formula $\alpha_{i}$
\end_inset

 are set by the initial condition
\end_layout

\begin_layout Itemize
\begin_inset Formula $P_{ISI}(T)$
\end_inset

 in the eigenbasis 
\begin_inset Formula 
\[
P_{ISI}(T)=-\frac{\sigma}{2\tau_{m}}\sum_{i}\alpha_{i}\partial_{V}\phi_{i}(V_{th})e^{-\lambda_{i}t/\tau_{m}}
\]

\end_inset


\end_layout

\begin_layout Itemize
The eigenvalues 
\begin_inset Formula $\lambda_{i}$
\end_inset

 are strictly positive, the distribution 
\begin_inset Formula $P(V,t)$
\end_inset

 does 
\series bold
not
\series default
 reach steady state but instead decays asymptotically to zero for large
 
\begin_inset Formula $t$
\end_inset


\end_layout

\begin_layout Itemize
If a finite gap is present between the smallest (dominate) eigenvalue
\begin_inset Formula $\lambda_{1}$
\end_inset

 and the next 
\begin_inset Formula $\lambda_{2}$
\end_inset

, the dynamics are dominated by a single exponential
\begin_inset Formula 
\begin{align*}
P(V,t) & \approx\alpha_{1}\phi_{1}(V)e^{-\lambda_{1}t/\tau_{m}}\\
P_{ISI}(T) & \approx-\frac{\sigma}{2\tau_{m}}\alpha\partial_{V}\phi_{1}(V_{th})e^{-\lambda_{i}T/\tau_{m}}
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection*
Eigenvalue Decomposition of the Fokker-Planck operator 
\end_layout

\begin_layout Itemize
Variable transformation 
\begin_inset Formula 
\[
\mathcal{L}[f]=\frac{\partial}{\partial y}(yf)+\frac{1}{2}\frac{\partial^{2}}{\partial y^{2}}f
\]

\end_inset


\end_layout

\begin_layout Itemize
Eigenfunctions can be determined for the LIF neuron
\end_layout

\begin_layout Itemize
For the EIF model, eigenfunctions of the Fokker-Planck operator cannot be
 written explicitly 
\end_layout

\begin_layout Itemize
Eigenvalue equation 
\begin_inset Formula 
\[
\mathcal{L}[\phi]=-\lambda_{i}\phi
\]

\end_inset

with 
\begin_inset Formula 
\[
\mathcal{\mathcal{L}}[f]=\frac{\partial}{\partial V}\left[V-\mu-\psi(V)\right]f+\frac{\sigma}{2}\frac{\partial^{2}}{\partial V^{2}}f
\]

\end_inset


\end_layout

\begin_layout Itemize
Probability flux 
\begin_inset Formula 
\[
\tau_{m}J(V)=\left[\mu-V+\psi(V)\right]\phi-\frac{\sigma^{2}}{2}\frac{\partial\phi}{\partial V}
\]

\end_inset


\end_layout

\begin_layout Itemize
Eigenvalue equation can be transformed into first order equations 
\begin_inset Formula 
\begin{align*}
\frac{\partial}{\partial V}J_{1} & =\lambda\phi\\
\frac{\sigma^{2}}{2}\frac{\partial\phi}{\partial V} & =\left[\mu-V+\psi(V)\right]\phi-\tau_{m}J_{1}
\end{align*}

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
Proof: We start from the eigenvalue equation 
\begin_inset Formula 
\[
\mathcal{L}\phi=-\lambda\phi
\]

\end_inset


\end_layout

\begin_layout Plain Layout
with 
\begin_inset Formula 
\[
\mathcal{L}\phi=\partial_{x}(x\phi)+\frac{1}{2}\partial_{x}^{2}\phi
\]

\end_inset


\end_layout

\begin_layout Plain Layout
The flux associated with eigenfunction 
\begin_inset Formula $\phi$
\end_inset

 is 
\begin_inset Formula 
\[
J=-\left(x\phi+\frac{1}{2}\partial_{x}\phi\right)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Write 
\begin_inset Formula 
\[
\partial_{V}J=\lambda\phi
\]

\end_inset

and
\begin_inset Formula 
\[
\frac{1}{2}\partial_{x}\phi=x\phi-J
\]

\end_inset


\end_layout

