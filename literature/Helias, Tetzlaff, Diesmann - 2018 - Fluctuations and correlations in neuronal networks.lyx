\begin_layout Itemize
Function needs to be continuous 
\begin_inset Formula 
\[
q_{1}(x_{r_{+}})-q_{1}(x_{r_{-}})=0
\]

\end_inset


\end_layout

\begin_layout Itemize
Finite flux at threshold 
\begin_inset Formula 
\[
q_{1}(x_{\theta})=0
\]

\end_inset


\end_layout

\begin_layout Itemize
Since 
\begin_inset Formula $q_{1}=q_{h}+q_{p}$
\end_inset

, we need to determine the boundary values of the particular solution 
\end_layout

\begin_layout Itemize
The particular solution is given by 
\begin_inset Formula 
\[
q_{p}=n(\omega)\left(\frac{G}{1+i\omega\tau}a^{\dagger}q_{0}+\frac{H}{2+i\omega\tau}(a^{\dagger})^{2}q_{0}\right)
\]

\end_inset

with 
\begin_inset Formula 
\begin{align*}
a^{\dagger}q_{0} & =\left(\frac{1}{2}x-\partial_{x}\right)q_{0}\\
\left(a^{\dagger}\right)^{2}q_{0} & =\left(-\frac{1}{2}x^{2}-x\partial_{x}\right)q_{0}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Each term which does not contain a derivative 
\begin_inset Formula $\partial_{x}$
\end_inset

