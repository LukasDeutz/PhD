\begin_layout Subsection*
Fokker-Planck system 
\end_layout

\begin_layout Subsubsection*

\series bold
Adiabatic approximation
\end_layout

\begin_layout Itemize
The time scales of slow 
\begin_inset Formula $\text{K}^{+}$
\end_inset

 channel kinetics which are effectively described by the adaptation current
 
\begin_inset Formula $w_{i}$
\end_inset

 are typically much larger than the faster membrane voltage dynamics 
\begin_inset Formula $\tau_{w}\gg C/g_{L}$
\end_inset


\end_layout

\begin_layout Itemize
Replace individual adaptation current 
\begin_inset Formula $w_{i}$
\end_inset

 by its average across the population 
\begin_inset Formula 
\[
\left\langle w\right\rangle _{N}=\frac{1}{N}\sum_{i=1}^{N}w_{i}(t)
\]

\end_inset


\end_layout

\begin_layout Itemize
Mean adaptation current 
\begin_inset Formula 
\[
\frac{d\left\langle w\right\rangle _{N}}{dt}=\frac{a(\left\langle V\right\rangle _{N}-E_{w})-\left\langle w\right\rangle _{N}}{\tau_{w}}+br_{N}(t)
\]

\end_inset


\end_layout

\begin_layout Itemize
Large networks recurrent input can be approximated by a mean part with additive
 fluctuations 
\begin_inset Formula 
\[
I_{\text{rec},i}/C\approx JKr_{d}(t)+J\sqrt{Kr_{d}(t)}\xi_{\text{rec},i}(t)
\]

\end_inset

with delayed spike rate 
\begin_inset Formula 
\[
r_{d}=r\ast p_{d}
\]

\end_inset


\end_layout

\begin_layout Itemize
Synaptic input 
\begin_inset Formula 
\begin{align*}
\mu_{\text{syn}} & =\mu_{\text{ext}}(t)+JKr_{d}(t)\\
\sigma_{\text{syn}}^{2} & =\sigma_{\text{ext}}^{2}(t)+J^{2}Kr_{d}(t)
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
The population-averaged adaptation current 
\begin_inset Formula $\left\langle w\right\rangle =\lim_{N\rightarrow\infty}\left\langle V\right\rangle _{N}$
\end_inset


\begin_inset Formula 
\[
\frac{d\left\langle w\right\rangle }{dt}=\frac{a(\left\langle V\right\rangle -E_{w})-\left\langle w\right\rangle }{\tau_{w}}+br(t)
\]

\end_inset

with 
\begin_inset Formula $\left\langle V\right\rangle =\lim_{N\rightarrow\infty}\left\langle V\right\rangle _{N}$
\end_inset

 and spike rate 
\begin_inset Formula $r=\lim_{N\rightarrow\infty,\Delta t\rightarrow0}r_{N}(t)$
\end_inset


\end_layout

\begin_layout Subsection*
Continuity equation 
\end_layout

\begin_layout Itemize
Fokker-Planck equation 
\begin_inset Formula 
\[
\frac{\partial}{\partial t}p(V,t)+\frac{\partial}{\partial V}q_{p}(V,t)=0
\]

\end_inset


\end_layout

\begin_layout Itemize
Probability flux 
\begin_inset Formula 
\[
q_{p}(V,t)=\left(\frac{I_{L}(V)+I_{\text{exp}}(V)}{C}+\mu_{\text{tot}}(t)\right)p(V,t)-\frac{\sigma_{\text{tot}}^{2}}{2}\frac{\partial}{\partial V}p(V,t)
\]

\end_inset

with total input mean and standard deviation 
\begin_inset Formula 
\begin{align*}
\mu_{\text{tot}}(t) & =\mu_{\text{syn}}(\mu_{\text{ext}}(t),r_{d}(t))-\left\langle w\right\rangle (t)/C\\
\sigma_{\text{tot}}(t) & =\sigma_{\text{syn}}(\sigma_{\text{ext}}(t),r_{d}(t))
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Time dependent-mean membrane voltage 
\begin_inset Formula 
\[
\left\langle V\right\rangle =\frac{\int_{-\infty}^{V_{s}}vp(v,t)dv}{p(v,t)}
\]

\end_inset


\end_layout

\begin_layout Itemize
Spike rate 
\begin_inset Formula $r$
\end_inset

 is obtained by the probability flux through 
\begin_inset Formula $V_{s}$
\end_inset


\end_layout

\begin_layout Itemize
Reset condition 
\begin_inset Formula 
\[
q_{p}(V_{r}^{+},t)-q_{p}(V_{r}^{-},t)=q_{p}(V_{s},t-T_{\text{ref}})
\]

\end_inset


\end_layout

\begin_layout Itemize
Absorbing boundary 
\begin_inset Formula 
\begin{align*}
p(V_{s},t) & =0
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Reflecting boundary 
\begin_inset Formula 
\[
\lim_{V\rightarrow-\infty}q_{p}(V,t)=0
\]

\end_inset


\end_layout

\begin_layout Itemize
Together with initial membrane voltage distribution 
\begin_inset Formula $p(V,0)=p_{0}(V)$
\end_inset

 and mean adaptation current 
\begin_inset Formula $\left\langle w\right\rangle (0)=0$
\end_inset

 the Fokker-Planck mean-field model is now 
\series bold
completely specified
\series default
 
\end_layout

\begin_layout Itemize
\begin_inset Formula $p(V,t)$
\end_inset

 only reflects the proportion of neurons which are not refractory at time
 
\begin_inset Formula $t$
\end_inset

, given by
\begin_inset Formula 
\[
P(t)=\int_{-\infty}^{V_{\text{s}}}p(v,t)dv=1-\int_{t-T_{\text{ref}}}^{t}r(s)ds
\]

\end_inset


\end_layout

\begin_layout Itemize
Total probability density 
\begin_inset Formula 
\[
p(V,t)+p_{\text{ref}}(V,t)
\]

\end_inset

with 
\begin_inset Formula 
\[
p_{\text{ref}}(V,t)=(1-P(t))\delta(V-V_{\text{r}})
\]

\end_inset


\end_layout

\begin_layout Itemize
In practice we consider a 
\series bold
finite reflecting lower barrier
\series default
 
\begin_inset Formula $V_{\text{lb}}$
\end_inset

 instead of negative infinite the numerical solution and for the low-dimensional
 approximations of the FPE
\end_layout

\begin_layout Itemize
\begin_inset Formula $V_{\text{lb}}$
\end_inset

 is chose sufficiently small in order to not distort the free diffusion
 of the membrane voltage for values below the reset, i.e.
 
\begin_inset Formula $V_{\text{lb}}\ll V_{\text{r}}$
\end_inset


\end_layout

