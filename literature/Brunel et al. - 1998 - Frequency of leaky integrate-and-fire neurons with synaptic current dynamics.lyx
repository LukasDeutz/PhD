\begin_layout Section
Model 
\end_layout

\begin_layout Itemize
Leaky integrate-and-fire 
\begin_inset Formula 
\[
\tau\dot{V}(t)=-V(t)+\tau I(t)
\]

\end_inset


\end_layout

\begin_layout Itemize
Dynamics of the afferent current 
\begin_inset Formula 
\[
\tau'\dot{I}=-I(t)+\sum_{i=1}^{N}J_{i}\sum_{k}\delta(t_{i}^{k}-t)
\]

\end_inset


\end_layout

\begin_layout Itemize
Model incoming spikes as Poisson process 
\begin_inset Formula $S(t)$
\end_inset


\end_layout

\begin_layout Itemize
Approximate Poisson process by diffusion process with the same mean and
 variance as the Poisson process 
\begin_inset Formula 
\[
\left\langle S(t)\right\rangle =JN\nu=\tilde{\mu}
\]

\end_inset


\begin_inset Formula 
\[
\left\langle S(t)S(t')\right\rangle =J^{2}\nu N\delta(t-t')=\tilde{\sigma}^{2}\delta(t-t')
\]

\end_inset


\end_layout

\begin_layout Itemize
The equation for 
\begin_inset Formula $V$
\end_inset

 and 
\begin_inset Formula $I$
\end_inset

 become 
\begin_inset Formula 
\begin{align*}
\tau\dot{V}(t) & =-V(t)+\tau I(t)\\
\dot{I} & =-\frac{1}{\tau'}\left(I(t)+\tau'\tilde{\mu}\right)+\frac{\tilde{\sigma}}{\tau'}\xi(t)
\end{align*}

\end_inset

 
\end_layout

\begin_layout Itemize
Transformation of variables 
\begin_inset Formula 
\begin{align*}
I & =\tilde{\mu}+\frac{\tilde{\sigma}}{\sqrt{2\tau'}}z\\
V & =\tau\tilde{\mu}+\sqrt{\frac{\tau}{2}}\tilde{\sigma}x
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
This leads to 
\begin_inset Formula 
\begin{align*}
\dot{x} & =-\frac{x}{\tau}+\frac{z}{\sqrt{\tau\tau'}}\\
\dot{z} & =-\frac{z}{\tau'}+\sqrt{\frac{2}{\tau'}}\xi(t)
\end{align*}

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
Proof 
\begin_inset Note Note
status open

\begin_layout Plain Layout
Start from 
\begin_inset Formula 
\[
\dot{I}=-\frac{1}{\tau'}\left(I(t)+\tilde{\mu}\right)+\frac{\tilde{\sigma}}{\tau'}\xi(t)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Use 
\begin_inset Formula 
\[
\dot{I}=\frac{\tilde{\sigma}}{\sqrt{2\tau'}}\dot{z}
\]

\end_inset

such that 
\begin_inset Formula 
\begin{align*}
\frac{\tilde{\sigma}}{\sqrt{2\tau'}}\dot{z} & =-\frac{1}{\tau'}\left(I(t)+\tilde{\mu}\right)+\frac{\tilde{\sigma}}{\tau'}\xi(t)\\
 & =-\frac{1}{\tilde{\sigma}}\sqrt{\frac{2}{\tau'}}\left(I(t)+\tilde{\mu}\right)+\sqrt{\frac{2}{\tau'}}\xi(t)
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Using 
\begin_inset Formula 
\[
z=\frac{\sqrt{2\tau'}}{\tilde{\sigma}}\left(I-\tilde{\mu}\right)
\]

\end_inset

we find 
\begin_inset Formula 
\[
\dot{z}=-\frac{z}{\tau'}+\sqrt{\frac{2}{\tau'}}\xi(t)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Second equation
\begin_inset Formula 
\[
\tau\dot{V}(t)=-V(t)+\tau I(t)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
can be written as 
\begin_inset Formula 
\[
\dot{V}(t)=-\frac{1}{\tau}V(t)+I(t)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Using 
\begin_inset Formula 
\[
\dot{V}=\sqrt{\frac{\tau}{2}}\tilde{\sigma}\dot{x}
\]

\end_inset

yields 
\begin_inset Formula 
\begin{align*}
\sqrt{\frac{\tau}{2}}\tilde{\sigma}\dot{x} & =-\frac{1}{\tau}V(t)+I(t)\\
\dot{x} & =-\frac{\sqrt{2}}{\tilde{\sigma}\tau^{3/2}}V(t)+\frac{1}{\tilde{\sigma}}\sqrt{\frac{2}{\tau}}I(t)\\
\dot{x} & =-\frac{\sqrt{2}}{\tilde{\sigma}\tau^{3/2}}V(t)+\frac{1}{\tilde{\sigma}}\sqrt{\frac{2}{\tau}}\left(\tilde{\mu}+\frac{\tilde{\sigma}}{\sqrt{2\tau'}}z\right)\\
\dot{x} & =-\frac{\sqrt{2}}{\tilde{\sigma}\tau^{3/2}}V(t)+\frac{1}{\tilde{\sigma}}\sqrt{\frac{2}{\tau}}\tilde{\mu}+\frac{1}{\sqrt{\tau\tau'}}z\\
\dot{x} & =-\frac{1}{\tau}\frac{1}{\tilde{\sigma}}\sqrt{\frac{2}{\tau}}\left(V-\tau\tilde{\mu}\right)+\frac{1}{\sqrt{\tau\tau'}}z
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Using
\begin_inset Formula 
\[
x=\frac{1}{\sigma}\sqrt{\frac{2}{\tau}}\left(V-\tau\tilde{\mu}\right)
\]

\end_inset

we arrive at
\begin_inset Formula 
\[
\dot{x}=-\frac{1}{\tau}x+\frac{1}{\sqrt{\tau\tau'}}z
\]

\end_inset


\end_layout

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Itemize
Threshold and reset potential in the new variables
\begin_inset Formula 
\[
\hat{\theta}=\sqrt{2}\frac{\theta-\mu}{\sigma},\quad\hat{H}=\sqrt{2}\frac{H-\mu}{\sigma}
\]

\end_inset

where 
\begin_inset Formula $\mu=\tau\tilde{\mu}$
\end_inset

 and 
\begin_inset Formula $\sigma=\tilde{\sigma}\sqrt{\tau}$
\end_inset


\end_layout

