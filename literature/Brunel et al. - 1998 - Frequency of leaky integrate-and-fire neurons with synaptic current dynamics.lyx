\begin_layout Plain Layout
Wiener-Khintchine theorem
\begin_inset Formula 
\[
2\pi C(\omega)=\left\langle Z(\omega)Z(\omega)^{*}\right\rangle 
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Taking the Fourier transform of 
\begin_inset Formula 
\[
\dot{z}=-\frac{z}{k^{2}}+\frac{\sqrt{2}}{k}\xi(t)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
yields 
\begin_inset Formula 
\[
i\omega Z=-\frac{Z}{k^{2}}+\frac{\sqrt{2}}{k}\Xi(\omega)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Solving for 
\begin_inset Formula $Z$
\end_inset

 yields 
\begin_inset Formula 
\[
\left(i\omega+k^{-2}\right)Z=\frac{\sqrt{2}}{k}\frac{\Xi(\omega)}{\left(i\omega+k^{-2}\right)}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Substituting into the first equation 
\begin_inset Formula 
\begin{align*}
2\pi C(\omega) & =\frac{2}{k^{2}}\left\langle \frac{\Xi(\omega)}{\left(i\omega+k^{-2}\right)}\frac{\Xi^{*}(\omega)}{\left(-i\omega+k^{-2}\right)}\right\rangle \\
 & =\frac{2}{k^{2}}\frac{1}{\omega^{2}+k^{-4}}\left\langle \Xi(\omega)\Xi^{*}(\omega)\right\rangle \\
 & =\frac{2}{k^{2}}\frac{1}{\omega^{2}+k^{-4}}
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
Where we used that 
\begin_inset Formula 
\[
\left\langle \Xi(\omega)\Xi^{*}(\omega)\right\rangle =1
\]

\end_inset

which follows from 
\begin_inset Formula $\left\langle \xi(t)\xi(t')\right\rangle =\delta(t-t')$
\end_inset

.
 Hence, we find 
\begin_inset Formula 
\begin{align*}
2\pi c(\tau) & =\frac{2}{k^{2}}F^{-1}\left[\frac{1}{\omega^{2}+k^{-4}}\right]\\
2\pi c(\tau) & =\frac{2}{k^{2}}\exp\left(\frac{\left|\tau\right|}{k^{2}}\right)
\end{align*}

\end_inset


\end_layout

