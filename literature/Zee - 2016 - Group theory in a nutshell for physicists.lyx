\begin_layout Subsection*
A simple group does not contain a (nontrivial) invariant subgroup 
\end_layout

\begin_layout Itemize
Let 
\begin_inset Formula $f$
\end_inset

 be a homomorphic (does not change the algebraic structure) map of a group
 
\begin_inset Formula $G$
\end_inset

 into itself, i.e.
\begin_inset Formula 
\[
f(g_{1})f(g_{2})=f(g_{1}g_{2})
\]

\end_inset


\end_layout

\begin_layout Itemize
The kernel of 
\begin_inset Formula $f$
\end_inset

, is the set of elements that are mapped to identity, i.e.
 
\begin_inset Formula 
\[
\text{ker}(f)=\{\left.g\in H\right|\,f(g)=I'\}
\]

\end_inset


\end_layout

\begin_layout Itemize
This subgroup 
\begin_inset Formula $H$
\end_inset

 has at least one element, namely 
\begin_inset Formula $I$
\end_inset

 since 
\begin_inset Formula $f(I)=I'$
\end_inset


\begin_inset Formula 
\[
f(I)f(g)=f(Ig)=f(g)\Rightarrow f(I)=I'
\]

\end_inset


\end_layout

\begin_layout Itemize
If 
\begin_inset Formula $g_{1}$
\end_inset

 and 
\begin_inset Formula $g_{2}$
\end_inset

 are both in 
\begin_inset Formula $H$
\end_inset

 then 
\begin_inset Formula $g_{1}g_{2}$
\end_inset

 is also in 
\begin_inset Formula $H$
\end_inset

 
\begin_inset Formula 
\[
f(g_{1}g_{2})=f(g_{1})f(g_{2})=I'I'=I'
\]

\end_inset


\end_layout

\begin_layout Itemize
If 
\begin_inset Formula $g_{1}$
\end_inset

 is in 
\begin_inset Formula $H$
\end_inset

 then 
\begin_inset Formula $g_{1}^{-1}$
\end_inset

 is also in 
\begin_inset Formula $H$
\end_inset


\begin_inset Formula 
\[
I'=f(g^{-1}g)=f(g^{-1})f(g)=f(g^{-1})
\]

\end_inset


\end_layout

\begin_layout Itemize
Show that the kernel of 
\begin_inset Formula $f$
\end_inset

, the set of elements that are mapped to the identity, is an invariant subgroup
 of 
\begin_inset Formula $G$
\end_inset


\begin_inset Formula 
\[
g_{i}\in H\quad\text{if}\,f(g_{i})=I
\]

\end_inset


\end_layout

\begin_layout Itemize
Similarity transformation with 
\begin_inset Formula $g\notin H$
\end_inset


\begin_inset Formula 
\[
g^{-1}\,H\,g=H
\]

\end_inset


\end_layout

\begin_layout Itemize
Mapping 
\begin_inset Formula 
\begin{align*}
f(g^{-1}\,H\,g) & =f(g^{-1})f(H)f(g)\\
 & =f(g^{-1})f(g)\\
 & =f(g^{-1}g)\\
 & =f(I)\\
 & =I'
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Since 
\begin_inset Formula $H$
\end_inset

 contains all elements which are mapped to the identity and 
\begin_inset Formula $f(g^{-1}\,H\,g)$
\end_inset

 maps to the identity 
\begin_inset Formula $g^{-1}\,H\,g$
\end_inset

 must be in 
\begin_inset Formula $H$
\end_inset

.
 
\end_layout

