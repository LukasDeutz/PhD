\begin_inset Formula 
\[
J(x)=\sum_{i=1}^{N}J_{i}\phi_{i}(x)
\]

\end_inset

which yields 
\begin_inset Formula 
\[
\sum_{j=1}^{N}\int_{x_{l}}^{x_{r}}dx\,v\phi_{j}(x)J_{j}+\sum_{j=1}^{N-1}\int_{x_{l}}^{x_{r}}dx\,\left\{ xv\psi_{j}u_{j}-v'\psi_{j}u_{j}\right\} =0
\]

\end_inset


\end_layout

\begin_layout Itemize
Set 
\begin_inset Formula $v=\phi_{1},\phi_{2},\ldots$
\end_inset

