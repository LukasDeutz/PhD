\begin_inset Formula 
\begin{align*}
\sum_{j=1}^{N}\int_{x_{l}}^{x_{r}}dx\,\phi_{1}\phi_{j}J_{j}+\sum_{j=1}^{N-1}\int_{x_{l}}^{x_{r}}dx\,\left\{ x\phi_{1}\psi_{j}u_{j}-\phi'_{1}\psi_{j}u_{j}\right\}  & =0\\
\sum_{j=1}^{N}\int_{x_{l}}^{x_{r}}dx\,\phi_{2}\phi_{j}(x)J_{j}+\sum_{j=1}^{N-1}\int_{x_{l}}^{x_{r}}dx\,\left\{ x\phi_{2}\psi_{j}u_{j}-\phi'_{2}\psi_{j}u_{j}\right\}  & =0\\
\vdots
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
This set equations can be written as a matrix equation
\begin_inset Formula 
\[
\boldsymbol{A}\boldsymbol{J}+\boldsymbol{B}\boldsymbol{u}+\boldsymbol{C}\boldsymbol{u}=0
\]

\end_inset

where 
\begin_inset Formula 
\begin{align*}
A_{ij} & =\int_{x_{l}}^{x_{r}}dx\,\phi_{i}\phi_{j}\in\mathbb{R}^{N\times N}\\
B_{ij} & =\int_{x_{l}}^{x_{r}}dx\,x\phi_{i}\psi_{j}\in\mathbb{R}^{N\times N-1}\\
C_{ij} & =-\int_{x_{l}}^{x_{r}}\phi'_{i}\psi_{j}\in\mathbb{R}^{N\times N-1}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
The matrix elements are given by 
\begin_inset Formula 
\begin{align*}
A_{ij} & =\begin{cases}
A_{ii}=\frac{1}{3}h, & \text{for }i=(1,N)\\
